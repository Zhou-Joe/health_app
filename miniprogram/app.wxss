/* 全局样式 - 温暖治愈风格 */
page {
  /* 温暖治愈风格变量 */
  --warm-coral: #FF8A7A;
  --warm-peach: #FFB4A2;
  --warm-cream: #FFF5F0;
  --warm-white: #FFFEF9;
  --warm-mint: #A8E6CF;
  --warm-lavender: #E8D5F2;
  --warm-yellow: #FFF3B0;
  --warm-pink: #FFB3C6;
  --text-primary: #5D4E46;
  --text-secondary: #8B7E7A;
  --text-light: #B5A8A3;

  background: linear-gradient(180deg, #FFF5F0 0%, #FFFEF9 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 - 温暖风格 */
.card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 按钮样式 - 温暖风格 */
.btn-primary {
  background: linear-gradient(135deg, var(--warm-coral), var(--warm-peach));
  color: white;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.3);
}

.btn-primary:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(255, 138, 122, 0.2);
}

.btn-secondary {
  background: var(--warm-cream);
  color: var(--text-primary);
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.15);
}

.btn-danger {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  border-radius: 24rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

/* 文本样式 */
.text-primary {
  color: var(--warm-coral);
}

.text-success {
  color: #3A7A5C;
}

.text-warning {
  color: #D4A017;
}

.text-danger {
  color: #FF6B6B;
}

.text-muted {
  color: var(--text-light);
}

.text-small {
  font-size: 24rpx;
}

.text-large {
  font-size: 36rpx;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-wrap {
  display: flex;
  flex-wrap: wrap;
}

/* 间距样式 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }

.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }

.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }

.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* 状态标签 - 温暖风格 */
.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-normal {
  background: rgba(168, 230, 207, 0.25);
  color: #3A7A5C;
}

.status-abnormal {
  background: rgba(255, 138, 122, 0.2);
  color: #FF6B6B;
}

.status-attention {
  background: rgba(255, 243, 176, 0.4);
  color: #8B7A2C;
}

/* 加载和空状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: var(--text-light);
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 138, 122, 0.2), transparent);
  margin: 20rpx 0;
}

/* 温暖风格通用类 */
.warm-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.warm-btn {
  background: linear-gradient(135deg, var(--warm-coral), var(--warm-peach));
  color: white;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.3);
}

.warm-btn:active {
  transform: scale(0.96);
}
