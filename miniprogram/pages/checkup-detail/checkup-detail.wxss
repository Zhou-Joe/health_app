.detail-container {
  min-height: 100vh;
  padding: 20rpx;
}

.detail-hero {
  padding: 26rpx;
  margin-bottom: 18rpx;
  background: linear-gradient(135deg, rgba(58, 126, 201, 0.14), rgba(232, 93, 76, 0.1));
}

.hero-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12rpx;
}

.hero-title {
  display: block;
  font-size: 34rpx;
  font-weight: 800;
  color: #1d3554;
}

.hero-date {
  display: block;
  margin-top: 8rpx;
  font-size: 23rpx;
  color: #6281a7;
}

.hero-badge {
  flex-shrink: 0;
  border-radius: 999rpx;
  border: 1rpx solid rgba(70, 120, 182, 0.3);
  background: rgba(255, 255, 255, 0.8);
  font-size: 21rpx;
  color: #365f92;
  padding: 8rpx 14rpx;
}

.hero-subtitle {
  display: block;
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #4f6f94;
}

.info-card {
  margin-bottom: 18rpx;
}

.notes-card {
  margin-bottom: 18rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(245, 169, 98, 0.14), rgba(245, 169, 98, 0.05));
  border-left: 5rpx solid rgba(228, 145, 52, 0.5);
}

.notes-label {
  font-size: 28rpx;
  font-weight: 700;
  color: #b57b25;
  margin-bottom: 10rpx;
}

.notes-content {
  font-size: 27rpx;
  color: #496382;
  line-height: 1.7;
  white-space: pre-wrap;
}

.ai-summary-card {
  margin-bottom: 18rpx;
  background: linear-gradient(135deg, rgba(47, 116, 178, 0.08), rgba(47, 116, 178, 0.02));
  border-left: 5rpx solid rgba(47, 116, 178, 0.4);
}

.ai-summary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.ai-summary-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1d3554;
}

.ai-summary-actions {
  display: flex;
  gap: 12rpx;
}

.ai-action-btn {
  font-size: 22rpx;
  color: #2f74c2;
  padding: 6rpx 12rpx;
  border: 1rpx solid #2f74c2;
  border-radius: 12rpx;
  background: #f5faff;
}

.ai-summary-loading,
.ai-summary-empty {
  padding: 20rpx 0;
  text-align: center;
  color: #7a8ea8;
  font-size: 24rpx;
}

.ai-summary-error {
  padding: 20rpx 0;
  text-align: center;
}

.error-text {
  display: block;
  color: #b24a49;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.retry-btn,
.generate-btn {
  display: inline-block;
  font-size: 24rpx;
  color: #2f74c2;
  padding: 8rpx 20rpx;
  border: 1rpx solid #2f74c2;
  border-radius: 14rpx;
  background: #f5faff;
}

.ai-summary-content {
  font-size: 26rpx;
  color: #3a4a5c;
  line-height: 1.8;
  padding: 12rpx 0;
}

.ai-summary-placeholder {
  cursor: pointer;
}

.ai-summary-placeholder:active {
  transform: scale(0.99);
}

.placeholder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.placeholder-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.placeholder-text {
  font-size: 26rpx;
  color: #2f74c2;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.placeholder-hint {
  font-size: 22rpx;
  color: #7a8ea8;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8eff8;
}

.info-row:last-child {
  border-bottom: none;
}

.action-row {
  display: flex;
  justify-content: center;
  padding: 22rpx 0 8rpx;
  border-top: 1rpx solid #e8eff8;
  margin-top: 14rpx;
}

.delete-checkup-btn {
  width: 220rpx;
  height: 74rpx;
  line-height: 74rpx;
  padding: 0;
  border: none;
  border-radius: 999rpx;
  font-size: 25rpx;
  font-weight: 700;
  color: #fff;
  background: linear-gradient(135deg, #d95050, #ed7676);
  box-shadow: 0 8rpx 20rpx rgba(217, 80, 80, 0.26);
}

.label {
  font-size: 27rpx;
  color: #6d86a7;
}

.value {
  font-size: 29rpx;
  color: #233f61;
  font-weight: 600;
}

.stats-card {
  display: flex;
  justify-content: space-around;
  margin-bottom: 18rpx;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  display: block;
}

.stat-label {
  font-size: 23rpx;
  color: #7a91ae;
  margin-top: 8rpx;
}

.indicators-card {
  margin-bottom: 20rpx;
}

.add-btn {
  font-size: 23rpx;
  color: #fff;
  font-weight: 700;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #3b78c2, #4f95e6);
  padding: 8rpx 16rpx;
}

.indicator-list {
  margin-top: 16rpx;
}

.indicator-item {
  padding: 22rpx;
  background: rgba(243, 248, 255, 0.95);
  border-radius: 18rpx;
  margin-bottom: 14rpx;
  border: 1rpx solid rgba(92, 138, 196, 0.15);
}

.indicator-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.indicator-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f3a59;
}

.indicator-value {
  margin-bottom: 8rpx;
}

.indicator-value .value {
  font-size: 36rpx;
  color: #2f6eb2;
  font-weight: 800;
}

.unit {
  font-size: 24rpx;
  color: #5d7798;
  margin-left: 8rpx;
}

.reference {
  font-size: 22rpx;
  color: #7289a4;
}
