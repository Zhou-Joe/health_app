.vital-logs-container {
  min-height: 100vh;
  padding: 20rpx;
  background: #F6F8FC;
  padding-bottom: 160rpx;
}

.header-section {
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

.logs-list {
  margin-bottom: 20rpx;
}

.log-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.vital-type-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.vital-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.vital-label {
  font-size: 26rpx;
  font-weight: 600;
}

.log-date {
  font-size: 24rpx;
  color: #95a5a6;
}

.log-content {
  display: flex;
  flex-direction: column;
}

.value-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.value-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
}

.value-unit {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-left: 8rpx;
}

.log-notes {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.log-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 10rpx;
}

.action-btn.edit {
  color: #3A78C2;
  background: rgba(58, 120, 194, 0.1);
}

.action-btn.delete {
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #95a5a6;
}

.loading-state {
  display: flex;
  justify-content: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #95a5a6;
}

.add-btn {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #3A78C2 0%, #5B9BD5 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(58, 120, 194, 0.3);
}

.add-icon {
  margin-right: 12rpx;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-container {
  width: 90%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.modal-close {
  font-size: 36rpx;
  color: #95a5a6;
  padding: 10rpx;
}

.modal-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.form-input {
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.value-input-row {
  display: flex;
  gap: 16rpx;
}

.value-input {
  flex: 2;
}

.unit-input {
  flex: 1;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.picker-value {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
}

.picker-icon {
  margin-right: 12rpx;
}

.input-placeholder {
  color: #bdc3c7;
}

.modal-actions {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background: #f8f9fa;
  color: #7f8c8d;
}

.confirm-btn {
  background: linear-gradient(135deg, #3A78C2 0%, #5B9BD5 100%);
  color: #ffffff;
}
