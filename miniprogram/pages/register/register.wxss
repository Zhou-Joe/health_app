.register-container {
  min-height: 100vh;
  padding: 40rpx 40rpx 60rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
  position: relative;
  overflow: hidden;
}

.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
}

.blob-1 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #3A78C2 0%, #5B9BD5 100%);
  top: -100rpx;
  right: -100rpx;
}

.blob-2 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #E85D4C 0%, #F5A9A0 100%);
  bottom: 200rpx;
  left: -100rpx;
}

.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.logo-wrapper {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #3A78C2 0%, #5B9BD5 100%);
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(58, 120, 194, 0.3);
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 70rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #7f8c8d;
}

.register-form {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
}

.form-item {
  margin-bottom: 30rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 0 30rpx;
  height: 100rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  background: #ffffff;
  border-color: #3A78C2;
  box-shadow: 0 0 0 6rpx rgba(58, 120, 194, 0.1);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: #2c3e50;
}

.input-placeholder {
  color: #bdc3c7;
}

.agreement-check {
  margin: 40rpx 0;
}

.checkbox-label {
  display: flex;
  align-items: flex-start;
}

.custom-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #bdc3c7;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-top: 4rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.custom-checkbox.checked {
  background: #3A78C2;
  border-color: #3A78C2;
}

.checkmark {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.check-content {
  flex: 1;
  line-height: 1.6;
}

.check-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

.link-text {
  font-size: 26rpx;
  color: #3A78C2;
}

.register-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #3A78C2 0%, #5B9BD5 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(58, 120, 194, 0.3);
  margin-top: 30rpx;
}

.register-btn[disabled] {
  background: linear-gradient(135deg, #a0c4e8 0%, #b8d4f0 100%);
  box-shadow: none;
}

.btn-content {
  display: flex;
  align-items: center;
}

.btn-icon {
  margin-right: 12rpx;
}

.login-link {
  text-align: center;
  margin-top: 40rpx;
}

.login-link .link-text {
  font-size: 28rpx;
}
