/* pages/upload/upload.wxss */
.upload-container {
  padding: 20rpx;
  background: #FFFFFF;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(255, 154, 158, 0.06) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(168, 237, 234, 0.06) 0%, transparent 50%);
  min-height: 100vh;
}

.upload-card {
  margin-bottom: 20rpx;
  background: #FAFAFA;
  border-radius: 24rpx;
  padding: 30rpx;
  border: 2rpx solid #F0F0F0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.upload-area {
  border: 3rpx dashed #FFDAB9;
  background: linear-gradient(135deg, #FFFAF8 0%, #FFF5F5 100%);
  border-radius: 24rpx;
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.upload-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.upload-btn {
  flex: 1;
  height: 120rpx;
  background: #FFFFFF;
  border: 2rpx solid #F0F0F0;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  border-color: transparent;
}

.upload-btn::after {
  border: none;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.upload-btn:active .btn-text {
  color: #5A4A4A;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.upload-text {
  font-size: 28rpx;
  color: #AAAAAA;
}

.file-info {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  border: 2rpx solid #F0F0F0;
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.file-remove {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.25);
}

.form-section {
  margin-top: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
}

.form-item-vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  font-size: 28rpx;
  margin-top: 12rpx;
  box-sizing: border-box;
  border: 2rpx solid #F0F0F0;
}

.form-item-vertical .form-label {
  width: 100%;
  margin-bottom: 8rpx;
}

.common-hospitals {
  margin-top: 30rpx;
}

.section-label {
  font-size: 26rpx;
  color: #AAAAAA;
  margin-bottom: 16rpx;
  display: block;
}

.hospital-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hospital-tag {
  padding: 14rpx 28rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666666;
  border: 2rpx solid #F0F0F0;
  transition: all 0.3s ease;
}

.hospital-tag:active {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  border-color: transparent;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

.progress-card {
  margin-top: 20rpx;
  background: #FAFAFA;
  border-radius: 24rpx;
  padding: 30rpx;
  border: 2rpx solid #F0F0F0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-status {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF9A9E;
}

.progress-tip {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #AAAAAA;
  margin-top: 20rpx;
}

.progress-tip.success {
  color: #A8EDEA;
  font-weight: 500;
}

.view-result-btn {
  width: 100%;
  margin-top: 20rpx;
}
