/* pages/upload/upload.wxss */
.upload-container {
  padding: 20rpx;
}

.upload-card {
  margin-bottom: 20rpx;
}

.upload-area {
  border: 2rpx dashed #D9D9D9;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.upload-text {
  font-size: 28rpx;
  color: #999999;
}

.file-preview {
  position: relative;
  width: 100%;
}

.file-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

.file-remove {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: #FF5252;
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.form-section {
  margin-top: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.form-item-vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #333333;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 12rpx;
  box-sizing: border-box;
}

.form-item-vertical .form-label {
  width: 100%;
  margin-bottom: 8rpx;
}

.common-hospitals {
  margin-top: 30rpx;
}

.section-label {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
  display: block;
}

.hospital-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hospital-tag {
  padding: 12rpx 24rpx;
  background-color: #F0F0F0;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666666;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

.progress-card {
  margin-top: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-status {
  font-size: 28rpx;
  color: #333333;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A90E2;
}

.progress-tip {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
  margin-top: 20rpx;
}

.view-result-btn {
  width: 100%;
  margin-top: 20rpx;
}
