/* pages/dashboard/dashboard.wxss - 革命性重新设计 */

page {
  background: #FAF7F5;
  --primary: #E85D4C;
  --secondary: #4A90A4;
  --accent: #F5A962;
  --bg-soft: #FFF9F2;
}

/* ==================== 背景装饰 ==================== */
.dashboard-container {
  min-height: 100vh;
  padding: 0;
  position: relative;
  overflow: hidden;
}

.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
}

.blob-1 {
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.3), transparent);
  top: -200rpx;
  right: -100rpx;
  animation: float 20s ease-in-out infinite;
}

.blob-2 {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(74, 144, 164, 0.25), transparent);
  bottom: 100rpx;
  left: -150rpx;
  animation: float 25s ease-in-out infinite reverse;
}

.blob-3 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(245, 169, 98, 0.2), transparent);
  top: 40%;
  left: 30%;
  animation: float 15s ease-in-out infinite;
  animation-delay: 5s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(30rpx, -50rpx) scale(1.1); }
  66% { transform: translate(-20rpx, 20rpx) scale(0.95); }
}

/* ==================== 顶部不对称布局 ==================== */
.top-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 1;
}

.welcome-card {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.date-badge {
  width: 100rpx;
  height: 120rpx;
  background: var(--primary);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(232, 93, 76, 0.4);
}

.day-text {
  font-size: 42rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
}

.month-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  text-transform: uppercase;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.greeting-main {
  font-size: 24rpx;
  color: var(--primary);
  font-weight: 600;
}

.greeting-sub {
  font-size: 32rpx;
  font-weight: 700;
  color: #2A2A2A;
  letter-spacing: 1rpx;
}

.avatar-section {
  position: relative;
}

.avatar-ring {
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.avatar-emoji {
  font-size: 56rpx;
}

.settings-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  background: var(--primary);
  border-radius: 50%;
  border: 4rpx solid white;
  z-index: 3;
}

/* ==================== 健康评分大卡片 - 视觉焦点 ==================== */
.health-score-card {
  margin: 0 20rpx 32rpx;
  padding: 48rpx 40rpx;
  background: white;
  border-radius: 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
  overflow: hidden;
}

.health-score-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.08), transparent);
  border-radius: 50%;
}

.score-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.score-title-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.score-emoji {
  font-size: 36rpx;
}

.score-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.score-trend {
  width: 56rpx;
  height: 56rpx;
  background: rgba(46, 204, 113, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.trend-icon {
  font-size: 32rpx;
  color: #2ECC71;
  font-weight: bold;
}

.score-display {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(232, 93, 76, 0.4);
  position: relative;
}

.score-circle::before {
  content: '';
  position: absolute;
  inset: 8rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
}

.score-value {
  font-size: 72rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
  position: relative;
  z-index: 1;
}

.score-max {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.score-details {
  position: relative;
  z-index: 1;
}

.detail-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.detail-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--secondary);
}

.detail-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* ==================== 数据卡片 - 横向滚动 ==================== */
.stats-scroll {
  display: flex;
  gap: 20rpx;
  overflow-x: scroll;
  padding: 0 20rpx 32rpx;
  -webkit-overflow-scrolling: touch;
  position: relative;
  z-index: 1;
}

.stats-scroll::-webkit-scrollbar {
  display: none;
}

.stat-card {
  flex-shrink: 0;
  width: 220rpx;
  height: 180rpx;
  border-radius: 36rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
}

.stat-primary {
  background: linear-gradient(135deg, #4A90A4, #5BA3B7);
  box-shadow: 0 12rpx 40rpx rgba(74, 144, 164, 0.3);
}

.stat-secondary {
  background: linear-gradient(135deg, var(--accent), #FFB984);
  box-shadow: 0 12rpx 40rpx rgba(245, 169, 98, 0.3);
}

.stat-accent {
  background: linear-gradient(135deg, #9B59B6, #B574C6);
  box-shadow: 0 12rpx 40rpx rgba(155, 89, 182, 0.3);
}

.stat-inner {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.stat-number {
  font-size: 52rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
}

.stat-icon-bg {
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
  font-size: 140rpx;
  opacity: 0.15;
}

/* ==================== 异常提醒 - 卡片重叠 ==================== */
.alert-section {
  margin: 0 20rpx 32rpx;
  position: relative;
  z-index: 1;
}

.alert-card-main {
  background: white;
  border-radius: 36rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
  border-left: 8rpx solid var(--primary);
}

.alert-emoji-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(232, 93, 76, 0.1);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.alert-emoji {
  font-size: 48rpx;
}

.alert-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.alert-title {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.alert-item {
  font-size: 32rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.alert-value {
  font-size: 28rpx;
  color: var(--primary);
  font-weight: 600;
}

.alert-arrow {
  font-size: 40rpx;
  color: #CCC;
  font-weight: bold;
}

.alert-card-sub {
  background: var(--bg-soft);
  border-radius: 28rpx;
  padding: 24rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.more-alert-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* ==================== 快捷操作 - 大按钮网格 ==================== */
.actions-grid {
  display: flex;
  gap: 16rpx;
  overflow-x: scroll;
  padding: 0 20rpx 32rpx;
  position: relative;
  z-index: 1;
  -webkit-overflow-scrolling: touch;
}

.actions-grid::-webkit-scrollbar {
  display: none;
}

.action-card {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.action-upload {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
}

.action-ai {
  background: linear-gradient(135deg, #4ECDC4, #7ED7D0);
}

.action-meds {
  background: linear-gradient(135deg, #95A5A6, #B5C5C6);
}

.action-trends {
  background: linear-gradient(135deg, #3498DB, #5DADE2);
}

.action-integration {
  background: linear-gradient(135deg, #9B59B6, #B574C6);
  box-shadow: 0 8rpx 24rpx rgba(155, 89, 182, 0.3);
}

.action-bg-circle {
  position: absolute;
  width: 200%;
  height: 200%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  top: -50%;
  left: -50%;
}

.action-emoji {
  font-size: 44rpx;
  position: relative;
  z-index: 1;
}

.action-title {
  font-size: 22rpx;
  font-weight: 700;
  color: white;
  position: relative;
  z-index: 1;
}

/* ==================== 最新报告 - 时间轴 ==================== */
.reports-section {
  padding: 0 20rpx 40rpx;
  position: relative;
  z-index: 1;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #2A2A2A;
}

.section-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(42, 42, 42, 0.1), transparent);
}

.section-more {
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
}

.report-timeline {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding-left: 40rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
  padding-left: 40rpx;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -53rpx;
  top: 20rpx;
  bottom: -20rpx;
  width: 4rpx;
  background: linear-gradient(180deg, var(--primary), transparent);
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: -67rpx;
  top: 12rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: var(--primary);
  border: 6rpx solid #FAF7F5;
  box-shadow: 0 0 0 2rpx var(--primary);
}

.timeline-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.report-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.report-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.report-date {
  font-size: 24rpx;
  color: #999;
}

.report-badge {
  background: var(--bg-soft);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.badge-count {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--primary);
}

.badge-unit {
  font-size: 22rpx;
  color: #666;
}

.empty-reports {
  text-align: center;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-emoji {
  font-size: 100rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}
