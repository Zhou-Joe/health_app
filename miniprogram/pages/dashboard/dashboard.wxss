/* pages/dashboard/dashboard.wxss */
.dashboard-container {
  padding: 20rpx;
  background: #FFFFFF;
  background-image:
    radial-gradient(circle at 10% 20%, rgba(255, 154, 158, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 90% 80%, rgba(168, 237, 234, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(254, 207, 239, 0.05) 0%, transparent 50%);
  min-height: 100vh;
}

/* ==================== 用户信息卡片 ==================== */
.user-card {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  margin-bottom: 30rpx;
  position: relative;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.25);
}

.user-info {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: #5A4A4A;
}

.user-greeting {
  font-size: 26rpx;
  opacity: 0.8;
  color: #5A4A4A;
}

.user-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.settings-icon {
  font-size: 40rpx;
  opacity: 0.7;
  color: #5A4A4A;
}

/* ==================== 统计数据 ==================== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 158, 0.1);
  border: 2rpx solid #F0F0F0;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 500;
  color: #FF9A9E;
  margin-bottom: 10rpx;
}

.stat-danger {
  color: #FF8A8A;
}

.stat-label {
  font-size: 24rpx;
  color: #AAAAAA;
}

/* ==================== 异常指标提醒 ==================== */
.abnormal-alert {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFF0F0 100%);
  border-left: 6rpx solid #FF9A9E;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 158, 0.15);
}

.alert-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.alert-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.alert-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF8A8A;
}

.abnormal-list {
  max-height: 400rpx;
}

.abnormal-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #FF9A9E;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.abnormal-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.abnormal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.abnormal-value {
  font-size: 28rpx;
  color: #FF8A8A;
  font-weight: 500;
}

.abnormal-date {
  font-size: 24rpx;
  color: #AAAAAA;
}

.alert-footer {
  margin-top: 20rpx;
  text-align: right;
}

.alert-action {
  font-size: 28rpx;
  color: #FF9A9E;
  font-weight: 500;
}

/* ==================== 快捷操作 ==================== */
.quick-actions {
  margin-bottom: 30rpx;
}

.card {
  background-color: #FAFAFA;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #F0F0F0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.action-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.upload-icon {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
}

.integrate-icon {
  background: linear-gradient(135deg, #A8EDEA 0%, #FED6E3 100%);
}

.ai-icon {
  background: linear-gradient(135deg, #FFDAB9 0%, #FFE5E5 100%);
}

.manual-icon {
  background: linear-gradient(135deg, #E8F5FF 0%, #D4F5F8 100%);
}

.action-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
}

/* ==================== 健康趋势 ==================== */
.health-trends {
  margin-bottom: 30rpx;
}

.trend-types {
  display: flex;
  white-space: nowrap;
  margin-bottom: 24rpx;
}

.trend-type-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  background-color: #FAFAFA;
  border-radius: 20rpx;
  border: 2rpx solid #F0F0F0;
  transition: all 0.3s ease;
}

.trend-type-item.active {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  border-color: transparent;
}

.trend-type-item:active {
  transform: scale(0.95);
}

.trend-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.trend-name {
  font-size: 24rpx;
  font-weight: 400;
}

.trend-list {
  max-height: 600rpx;
}

.trend-item {
  background-color: #FAFAFA;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #F0F0F0;
}

.trend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.trend-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.trend-unit {
  font-size: 24rpx;
  color: #AAAAAA;
}

.trend-values {
  display: flex;
  white-space: nowrap;
}

.trend-value-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  margin-right: 16rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.trend-value-item.normal {
  border-color: #A8EDEA;
}

.trend-value-item.attention {
  border-color: #FFDAB9;
}

.trend-value-item.abnormal {
  border-color: #FF9A9E;
}

.trend-value-date {
  font-size: 22rpx;
  color: #AAAAAA;
  margin-bottom: 6rpx;
}

.trend-value-num {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

/* ==================== 最新报告 ==================== */
.recent-checkups {
  margin-bottom: 30rpx;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more-link {
  font-size: 26rpx;
  color: #FF9A9E;
}

.checkup-list {
  margin-top: 20rpx;
}

.checkup-item {
  background-color: #FAFAFA;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  border: 2rpx solid #F0F0F0;
}

.checkup-item:active {
  transform: scale(0.98);
  background-color: #F5F5F5;
}

.checkup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.checkup-hospital {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.checkup-date {
  font-size: 24rpx;
  color: #AAAAAA;
}

.checkup-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.indicator-count {
  font-size: 26rpx;
  color: #666666;
}

/* ==================== 状态徽章 ==================== */
.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-completed {
  background-color: #E8F5FF;
  color: #5BA3F5;
}

.status-processing,
.status-pending {
  background-color: #FFF8E1;
  color: #FFB74D;
}

.status-failed {
  background-color: #FFE5E5;
  color: #FF8A8A;
}

/* ==================== 空状态 ==================== */
.empty-container {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #AAAAAA;
  margin-bottom: 20rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}
