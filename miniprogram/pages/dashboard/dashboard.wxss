/* pages/dashboard/dashboard.wxss - 革命性重新设计 */

page {
  background: #FAF7F5;
  --primary: #E85D4C;
  --secondary: #4A90A4;
  --accent: #F5A962;
  --bg-soft: #FFF9F2;
}

/* ==================== 背景装饰 ==================== */
.dashboard-container {
  min-height: 100vh;
  padding: 0;
  position: relative;
  overflow: hidden;
}

.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
}

.blob-1 {
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.3), transparent);
  top: -200rpx;
  right: -100rpx;
  animation: float 20s ease-in-out infinite;
}

.blob-2 {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(74, 144, 164, 0.25), transparent);
  bottom: 100rpx;
  left: -150rpx;
  animation: float 25s ease-in-out infinite reverse;
}

.blob-3 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(245, 169, 98, 0.2), transparent);
  top: 40%;
  left: 30%;
  animation: float 15s ease-in-out infinite;
  animation-delay: 5s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(30rpx, -50rpx) scale(1.1); }
  66% { transform: translate(-20rpx, 20rpx) scale(0.95); }
}

/* ==================== 顶部不对称布局 ==================== */
.top-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 1;
}

.welcome-card {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.date-badge {
  width: 100rpx;
  height: 120rpx;
  background: var(--primary);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(232, 93, 76, 0.4);
}

.day-text {
  font-size: 42rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
}

.month-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  text-transform: uppercase;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.greeting-main {
  font-size: 24rpx;
  color: var(--primary);
  font-weight: 600;
}

.greeting-sub {
  font-size: 32rpx;
  font-weight: 700;
  color: #2A2A2A;
  letter-spacing: 1rpx;
}

.avatar-section {
  position: relative;
}

.avatar-ring {
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.avatar-emoji {
  font-size: 56rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.settings-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  background: var(--primary);
  border-radius: 50%;
  border: 4rpx solid white;
  z-index: 3;
}

/* ==================== 健康评分大卡片 - 视觉焦点 ==================== */
.health-score-card {
  margin: 0 20rpx 32rpx;
  padding: 48rpx 40rpx;
  background: white;
  border-radius: 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
  overflow: hidden;
}

.health-score-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.08), transparent);
  border-radius: 50%;
}

.score-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.score-title-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.score-emoji {
  font-size: 36rpx;
}

.score-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.score-trend {
  width: 56rpx;
  height: 56rpx;
  background: rgba(46, 204, 113, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.trend-icon {
  font-size: 32rpx;
  color: #2ECC71;
  font-weight: bold;
}

.score-display {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(232, 93, 76, 0.4);
  position: relative;
}

.score-circle::before {
  content: '';
  position: absolute;
  inset: 8rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
}

.score-value {
  font-size: 72rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
  position: relative;
  z-index: 1;
}

.score-max {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
  position: relative;
  z-index: 1;
}

.score-details {
  position: relative;
  z-index: 1;
}

.detail-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.detail-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--secondary);
}

.detail-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* ==================== 数据卡片 - 横向滚动 ==================== */
.stats-scroll {
  display: flex;
  gap: 20rpx;
  overflow-x: scroll;
  padding: 0 20rpx 32rpx;
  -webkit-overflow-scrolling: touch;
  position: relative;
  z-index: 1;
}

.stats-scroll::-webkit-scrollbar {
  display: none;
}

.stat-card {
  flex-shrink: 0;
  width: 220rpx;
  height: 180rpx;
  border-radius: 36rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
}

.stat-primary {
  background: linear-gradient(135deg, #4A90A4, #5BA3B7);
  box-shadow: 0 12rpx 40rpx rgba(74, 144, 164, 0.3);
}

.stat-secondary {
  background: linear-gradient(135deg, var(--accent), #FFB984);
  box-shadow: 0 12rpx 40rpx rgba(245, 169, 98, 0.3);
}

.stat-accent {
  background: linear-gradient(135deg, #9B59B6, #B574C6);
  box-shadow: 0 12rpx 40rpx rgba(155, 89, 182, 0.3);
}

.stat-inner {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.stat-number {
  font-size: 52rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
}

.stat-icon-bg {
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
  font-size: 140rpx;
  opacity: 0.15;
}

/* ==================== 快捷操作 - 大按钮网格 ==================== */
.actions-grid {
  display: flex;
  gap: 16rpx;
  overflow-x: scroll;
  padding: 0 20rpx 32rpx;
  position: relative;
  z-index: 1;
  -webkit-overflow-scrolling: touch;
}

.actions-grid::-webkit-scrollbar {
  display: none;
}

.action-card {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.action-upload {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
}

.action-ai {
  background: linear-gradient(135deg, #4ECDC4, #7ED7D0);
}

.action-meds {
  background: linear-gradient(135deg, #95A5A6, #B5C5C6);
}

.action-trends {
  background: linear-gradient(135deg, #3498DB, #5DADE2);
}

.action-integration {
  background: linear-gradient(135deg, #9B59B6, #B574C6);
  box-shadow: 0 8rpx 24rpx rgba(155, 89, 182, 0.3);
}

.action-bg-circle {
  position: absolute;
  width: 200%;
  height: 200%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  top: -50%;
  left: -50%;
}

.action-emoji {
  font-size: 44rpx;
  position: relative;
  z-index: 1;
}

.action-title {
  font-size: 22rpx;
  font-weight: 700;
  color: white;
  position: relative;
  z-index: 1;
}

/* ==================== 事件时间轴 ==================== */
.events-section {
  padding: 0 20rpx 32rpx;
  position: relative;
  z-index: 1;
}

.aggregate-tip {
  background: linear-gradient(135deg, #FFF4E6, #FFEFD9);
  border: 2rpx dashed rgba(232, 93, 76, 0.28);
  border-radius: 28rpx;
  padding: 22rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.aggregate-tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.aggregate-tip-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #B34639;
}

.aggregate-tip-text {
  font-size: 23rpx;
  color: #8F6654;
}

.aggregate-tip-btn {
  flex-shrink: 0;
  padding: 12rpx 20rpx;
  border-radius: 18rpx;
  background: linear-gradient(135deg, #E85D4C, #FF8A7A);
  box-shadow: 0 6rpx 16rpx rgba(232, 93, 76, 0.24);
}

.aggregate-tip-btn text {
  color: #fff;
  font-size: 23rpx;
  font-weight: 700;
}

.event-timeline {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding-left: 36rpx;
}

.event-item {
  position: relative;
  padding-left: 32rpx;
  padding-bottom: 24rpx;
}

.event-item::before {
  content: '';
  position: absolute;
  left: -18rpx;
  top: 18rpx;
  bottom: -10rpx;
  width: 3rpx;
  background: linear-gradient(180deg, rgba(232, 93, 76, 0.38), rgba(232, 93, 76, 0.02));
}

.event-item:last-child::before {
  display: none;
}

.event-dot {
  position: absolute;
  left: -28rpx;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 5rpx solid #FAF7F5;
  box-shadow: 0 0 0 2rpx rgba(148, 163, 184, 0.5);
  background: #94A3B8;
}

.event-dot.illness { background: #E85D4C; box-shadow: 0 0 0 2rpx rgba(232, 93, 76, 0.4); }
.event-dot.checkup { background: #3B82F6; box-shadow: 0 0 0 2rpx rgba(59, 130, 246, 0.4); }
.event-dot.chronic_management { background: #A855F7; box-shadow: 0 0 0 2rpx rgba(168, 85, 247, 0.4); }
.event-dot.emergency { background: #FB923C; box-shadow: 0 0 0 2rpx rgba(251, 146, 60, 0.4); }
.event-dot.wellness { background: #22C55E; box-shadow: 0 0 0 2rpx rgba(34, 197, 94, 0.4); }
.event-dot.medication_course { background: #EC4899; box-shadow: 0 0 0 2rpx rgba(236, 72, 153, 0.4); }
.event-dot.other { background: #94A3B8; box-shadow: 0 0 0 2rpx rgba(148, 163, 184, 0.45); }

.event-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 20rpx 22rpx;
  box-shadow: 0 8rpx 22rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(232, 93, 76, 0.08);
}

.event-card:active {
  transform: scale(0.98);
}

.event-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.event-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.event-type {
  flex-shrink: 0;
  font-size: 20rpx;
  color: #666;
  background: #F3F4F6;
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
}

.event-row-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10rpx;
}

.event-date {
  font-size: 22rpx;
  color: #8B8B8B;
}

.event-count {
  font-size: 22rpx;
  color: #E85D4C;
  font-weight: 600;
}

.event-auto {
  margin-top: 8rpx;
  display: inline-block;
  font-size: 20rpx;
  color: #4A90A4;
  background: rgba(74, 144, 164, 0.12);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
}

.event-enter {
  margin-top: 8rpx;
  display: block;
  font-size: 22rpx;
  color: #3B82F6;
  font-weight: 600;
}

.empty-events {
  text-align: center;
  padding: 50rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.empty-events-btn {
  margin-top: 8rpx;
  background: linear-gradient(135deg, #E85D4C, #FF8A7A);
  border-radius: 18rpx;
  padding: 14rpx 28rpx;
  box-shadow: 0 8rpx 18rpx rgba(232, 93, 76, 0.24);
}

.empty-events-btn text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #2A2A2A;
}

.section-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(42, 42, 42, 0.1), transparent);
}

.section-more {
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
}
