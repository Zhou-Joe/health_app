/* pages/complete-profile/complete-profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #FFFFFF;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(255, 154, 158, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(168, 237, 234, 0.08) 0%, transparent 50%);
  padding: 40rpx 30rpx;
}

.profile-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.header-desc {
  display: block;
  font-size: 28rpx;
  color: #AAAAAA;
}

.profile-form {
  background-color: #FAFAFA;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid #F0F0F0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #F0F0F0;
}

.picker-value {
  width: 100%;
  height: 88rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 88rpx;
  box-sizing: border-box;
  border: 2rpx solid #F0F0F0;
}

.gender-group {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  height: 120rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #F0F0F0;
  transition: all 0.3s;
}

.gender-option.active {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  border-color: transparent;
  color: #5A4A4A;
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 158, 0.3);
}

.gender-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.gender-text {
  font-size: 28rpx;
  color: #333333;
}

.tip-box {
  margin-top: 40rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #FFF8E1 0%, #FFF3CD 100%);
  border-radius: 20rpx;
  border-left: 4rpx solid #FFDAB9;
  display: flex;
  align-items: center;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}

.submit-btn[disabled] {
  background: #EEEEEE;
  color: #AAAAAA;
  box-shadow: none;
}
