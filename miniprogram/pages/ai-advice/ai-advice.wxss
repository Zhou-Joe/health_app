/* pages/ai-advice/ai-advice.wxss - 现代设计风格 */
page {
  --warm-coral: #FF8A7A;
  --warm-peach: #FFB4A2;
  --warm-cream: #FFF5F0;
  --warm-white: #FFFEF9;
  --warm-mint: #A8E6CF;
  --warm-lavender: #E8D5F2;
  --text-primary: #5D4E46;
  --text-secondary: #8B7E7A;
  --text-light: #B5A8A3;
  --primary: #E85D4C;
  --secondary: #4A90A4;
}

.ai-advice-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F0 0%, #FFFEF9 100%);
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.3;
  animation: float 18s ease-in-out infinite;
}

.blob-1 {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.3), transparent);
  top: -150rpx;
  right: -100rpx;
}

.blob-2 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(74, 144, 164, 0.25), transparent);
  bottom: -100rpx;
  left: -100rpx;
  animation-delay: 6s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-30rpx) scale(1.05); }
}

/* 页面头部 */
.page-header {
  padding: 60rpx 32rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.header-emoji {
  font-size: 48rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #2A2A2A;
}

.header-subtitle {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.header-right {
  padding: 12rpx 24rpx;
  background: rgba(232, 93, 76, 0.1);
  border-radius: 24rpx;
}

.history-btn {
  font-size: 24rpx;
  color: var(--primary);
  font-weight: 600;
}

/* 主内容 */
.main-content {
  position: relative;
  z-index: 1;
  padding: 0 20rpx 40rpx;
}

/* AI卡片 */
.ai-card {
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 16rpx 40rpx rgba(232, 93, 76, 0.3);
  margin-bottom: 32rpx;
}

.ai-avatar {
  font-size: 80rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-greeting {
  font-size: 28rpx;
  font-weight: 700;
  color: white;
}

.ai-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 选项网格 */
.options-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.option-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.option-card:active {
  transform: scale(0.96);
}

.option-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-theme {
  background: linear-gradient(135deg, rgba(232, 93, 76, 0.15), rgba(255, 138, 122, 0.15));
}

.report-theme {
  background: linear-gradient(135deg, rgba(74, 144, 164, 0.15), rgba(100, 200, 220, 0.15));
}

.medication-theme {
  background: linear-gradient(135deg, rgba(245, 169, 98, 0.15), rgba(255, 200, 100, 0.15));
}

.option-emoji {
  font-size: 32rpx;
}

.option-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2A2A2A;
}

.option-value {
  font-size: 20rpx;
  color: #999;
}

/* 输入区 */
.input-section {
  margin-bottom: 24rpx;
}

.input-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.question-input {
  width: 100%;
  min-height: 160rpx;
  background: var(--warm-white);
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 44rpx;
  border: none;
}

.input-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.char-count {
  font-size: 20rpx;
  color: var(--text-light);
}

/* 提交按钮 */
.submit-section {
  padding: 0 20rpx;
}

.submit-btn {
  width: 100%;
  height: 108rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  color: white;
  border-radius: 32rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 16rpx 40rpx rgba(232, 93, 76, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  opacity: 0.4;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
}

/* ==================== 弹窗样式 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(42, 42, 42, 0.6);
  display: flex;
  align-items: flex-end;
  z-index: 9999;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-container {
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.modal-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: #FAF7F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow-y: auto;
}

.modal-option {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #FAF7F5;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.modal-option.active {
  background: linear-gradient(135deg, rgba(232, 93, 76, 0.1), rgba(255, 138, 122, 0.1));
  border-color: var(--primary);
}

.modal-option-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.modal-option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.modal-option-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.modal-option-desc {
  font-size: 20rpx;
  color: #999;
}

.modal-check {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

/* 历史对话列表 */
.history-list {
  margin-top: 24rpx;
}

.history-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 16rpx;
}

.history-scroll {
  max-height: 400rpx;
}

.history-item {
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.04);
}

.history-item.active {
  border-color: var(--primary);
  background: rgba(232, 93, 76, 0.05);
}

.history-title-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #2A2A2A;
  display: block;
  margin-bottom: 8rpx;
}

.history-meta {
  font-size: 22rpx;
  color: #999;
}

/* 报告列表 */
.report-list-section {
  margin-top: 24rpx;
}

.list-actions {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.action-tag {
  flex: 1;
  padding: 12rpx;
  background: #FAF7F5;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #666;
  border: none;
}

.action-tag.clear {
  background: rgba(232, 93, 76, 0.1);
  color: var(--primary);
}

.report-scroll {
  max-height: 400rpx;
}

.report-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.04);
}

.report-item.selected {
  border-color: var(--primary);
  background: rgba(232, 93, 76, 0.05);
}

.report-check {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.report-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.report-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2A2A2A;
}

.report-meta {
  font-size: 22rpx;
  color: #999;
}

/* 药单列表 */
.medication-list-section {
  margin-top: 24rpx;
}

.medication-scroll {
  max-height: 400rpx;
}

.medication-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.04);
}

.medication-item.selected {
  border-color: var(--primary);
  background: rgba(232, 93, 76, 0.05);
}

.medication-check {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.medication-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.medication-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2A2A2A;
}

.medication-meta {
  font-size: 22rpx;
  color: #999;
}

.medication-date {
  font-size: 20rpx;
  color: #999;
}

/* Modal Footer */
.modal-footer {
  padding: 20rpx 32rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.modal-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  color: white;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}
