/* pages/ai-advice/ai-advice.wxss */
.ai-advice-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

/* ==================== 页面头部 ==================== */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  flex: 1;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.header-right {
  display: flex;
  align-items: center;
}

.history-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.history-btn::after {
  border: none;
}

/* ==================== 卡片通用样式 ==================== */
.section-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* ==================== 对话模式选择 ==================== */
.mode-selector {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mode-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  background-color: #FAFAFA;
  transition: all 0.3s ease;
  position: relative;
}

.mode-option.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #F0F4FF 0%, #E8EEFF 100%);
}

.mode-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.mode-content {
  flex: 1;
}

.mode-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}

.mode-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.mode-check {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

/* ==================== 对话选择 ==================== */
.conversation-select {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.select-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.conversation-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.conv-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.conv-item.active {
  background-color: #F0F4FF;
  border-color: #667eea;
}

.conv-main {
  flex: 1;
}

.conv-title {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 4rpx;
}

.conv-count {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.conv-delete {
  font-size: 26rpx;
  color: #FF5252;
  padding: 8rpx 16rpx;
}

/* ==================== 报告模式选择 ==================== */
.report-mode-selector {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.report-mode-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  background-color: #FAFAFA;
  transition: all 0.3s ease;
  position: relative;
}

.report-mode-option.active {
  border-color: #28A745;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0FFF0 100%);
}

.report-mode-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.report-mode-content {
  flex: 1;
}

.report-mode-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}

.report-mode-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.report-mode-check {
  font-size: 32rpx;
  color: #28A745;
  font-weight: bold;
}

/* ==================== 报告列表 ==================== */
.report-list {
  margin-top: 24rpx;
}

.report-actions {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx;
  background-color: #F5F5F5;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666666;
}

.report-items {
  max-height: 400rpx;
  overflow-y: auto;
}

.report-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #F5F5F5;
  background-color: #FFFFFF;
  transition: background-color 0.3s ease;
}

.report-item.selected {
  background-color: #F0F4FF;
}

.report-check {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 50%;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #FFFFFF;
  transition: all 0.3s ease;
}

.report-item.selected .report-check {
  background-color: #667eea;
  border-color: #667eea;
  color: #FFFFFF;
}

.report-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.report-hospital {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.report-date {
  font-size: 24rpx;
  color: #999999;
}

.report-count {
  font-size: 24rpx;
  color: #667eea;
}

.selected-tip {
  margin-top: 16rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #F0F4FF 0%, #E8EEFF 100%);
  border-radius: 8rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

.empty-reports {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
  color: #CCCCCC;
}

/* ==================== 问题输入 ==================== */
.question-input {
  width: 100%;
  min-height: 200rpx;
  max-height: 400rpx;
  padding: 20rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333333;
}

/* ==================== 提交按钮 ==================== */
.submit-section {
  padding: 20rpx 30rpx;
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  transition: all 0.3s ease;
  opacity: 0.5;
}

.submit-btn.active {
  opacity: 1;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  transform: scale(1.02);
}

.submit-btn[disabled] {
  opacity: 0.5;
}
