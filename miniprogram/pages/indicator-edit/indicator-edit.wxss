.edit-container {
  min-height: 100vh;
  padding: 20rpx;
}

.edit-hero {
  margin-bottom: 18rpx;
  background: linear-gradient(135deg, rgba(58, 126, 201, 0.14), rgba(232, 93, 76, 0.08));
}

.hero-title {
  display: block;
  font-size: 34rpx;
  color: #1d3554;
  font-weight: 800;
}

.hero-subtitle {
  display: block;
  margin-top: 8rpx;
  color: #6482a5;
  font-size: 24rpx;
}

.form-card {
  margin-bottom: 28rpx;
}

.form-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e7eff8;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  display: block;
  font-size: 27rpx;
  color: #26486d;
  font-weight: 600;
  margin-bottom: 14rpx;
}

.input {
  width: 100%;
  box-sizing: border-box;
  font-size: 27rpx;
  color: #1f3c5f;
  padding: 16rpx 18rpx;
  background: #f4f9ff;
  border-radius: 14rpx;
  border: 1rpx solid rgba(88, 134, 188, 0.2);
}

.picker-value {
  padding: 16rpx 18rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(88, 134, 188, 0.2);
  background: #f4f9ff;
  font-size: 27rpx;
  color: #1f3c5f;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  font-weight: 700;
}
