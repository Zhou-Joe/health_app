/* pages/conversation-history/conversation-history.wxss */
.history-container {
  min-height: 100vh;
  background: #FFFFFF;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(255, 154, 158, 0.06) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(168, 237, 234, 0.06) 0%, transparent 50%);
}

/* ==================== 页面头部 ==================== */
.page-header {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  padding: 40rpx 30rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 对话列表 ==================== */
.conversation-list {
  padding: 20rpx;
}

.conversation-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-actions {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.delete-icon {
  font-size: 36rpx;
  padding: 8rpx;
}

.item-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999999;
}

.item-preview {
  padding: 16rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.preview-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.view-text {
  font-size: 28rpx;
  color: #FF9A9E;
  font-weight: 500;
}

/* ==================== 空状态 ==================== */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #BBBBBB;
  margin-bottom: 40rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

/* ==================== 通用按钮样式 ==================== */
.btn-primary {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}

.btn-primary::after {
  border: none;
}
