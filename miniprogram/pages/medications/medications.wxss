/* pages/medications/medications.wxss - 温暖治愈风格 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F0 0%, #FFFEF9 100%);
  padding: 24rpx;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #FFA07A, #FFB380);
  border-radius: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(255, 160, 122, 0.25);
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: white;
  font-weight: 600;
  font-size: 26rpx;
  border: none;
}

.add-btn {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 16rpx 28rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: white;
  font-weight: 600;
  border: none;
}

.add-btn-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.add-btn .icon {
  font-size: 32rpx;
  font-weight: 300;
}

/* 区块样式 */
.section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4E46;
}

.section-count {
  font-size: 26rpx;
  color: #8B7E7A;
}

.auto-cluster-btn {
  background: linear-gradient(135deg, #A8E6CF, #88D8B0);
  color: #3A7A5C;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: none;
}

/* 药单组卡片样式 */
.group-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.group-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 138, 122, 0.1);
  border: 2rpx solid rgba(255, 138, 122, 0.15);
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, #E0F2FE, #BAE6FD);
}

.group-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.group-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #0369A1;
}

.group-count {
  font-size: 24rpx;
  color: #0EA5E9;
}

.expand-icon {
  font-size: 24rpx;
  color: #0369A1;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.group-summary {
  padding: 16rpx 28rpx;
  background: rgba(14, 165, 233, 0.08);
  font-size: 24rpx;
  color: #0369A1;
  line-height: 40rpx;
}

.group-medications {
  padding: 20rpx 28rpx;
  border-top: 2rpx solid rgba(14, 165, 233, 0.1);
}

.medication-mini-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: var(--warm-cream);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
}

.medication-mini-card:last-child {
  margin-bottom: 0;
}

.med-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.med-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #5D4E46;
}

.med-dosage {
  font-size: 24rpx;
  color: #8B7E7A;
}

.med-progress {
  font-size: 24rpx;
  color: #FF8A7A;
  font-weight: 600;
}

.group-action-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(14, 165, 233, 0.1);
}

.group-checkin-btn,
.group-edit-btn,
.group-delete-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
}

.group-checkin-btn {
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
}

.group-edit-btn {
  background: var(--warm-cream);
  color: #5D4E46;
  border: 2rpx solid rgba(255, 138, 122, 0.15);
}

.group-delete-btn {
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
}

.group-quick-actions {
  padding: 16rpx 28rpx;
  border-top: 2rpx solid rgba(14, 165, 233, 0.1);
}

.quick-checkin-btn {
  width: 100%;
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx;
  border-radius: 20rpx;
  border: none;
}

/* 药单列表样式 */
.medication-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.medication-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 138, 122, 0.1);
}

.medicine-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.medicine-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4E46;
}

.dosage {
  font-size: 26rpx;
  color: #8B7E7A;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.delete-btn {
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.progress-section {
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #5D4E46;
  font-weight: 500;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: #FF8A7A;
}

.progress-bar {
  height: 16rpx;
  background: var(--warm-cream);
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF8A7A, #FFB4A2);
  border-radius: 12rpx;
  transition: width 0.3s ease;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.date-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: var(--warm-cream);
  border-radius: 20rpx;
}

.date-label {
  font-size: 22rpx;
  color: #B5A8A3;
}

.date-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #5D4E46;
}

.notes-section {
  background: rgba(168, 230, 207, 0.15);
  border-radius: 20rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 8rpx;
}

.notes-label {
  font-size: 24rpx;
  color: #3A7A5C;
  font-weight: 600;
  flex-shrink: 0;
}

.notes-text {
  font-size: 24rpx;
  color: #5D4E46;
  line-height: 40rpx;
}

.card-actions {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
}

.primary-btn, .secondary-btn {
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
}

.primary-btn {
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 138, 122, 0.3);
}

.primary-btn:active {
  transform: scale(0.96);
}

.secondary-btn {
  background: var(--warm-cream);
  color: #5D4E46;
  border: 2rpx solid rgba(255, 138, 122, 0.15);
}

.secondary-btn:active {
  background: rgba(255, 138, 122, 0.1);
}

.checkin-btn .icon,
.records-btn .icon,
.makeup-btn .icon {
  font-size: 32rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 100rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4E46;
}

.empty-desc {
  font-size: 26rpx;
  color: #B5A8A3;
  text-align: center;
  line-height: 40rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(93, 78, 70, 0.5);
}

.modal-content {
  position: relative;
  width: 100%;
  background: white;
  border-radius: 36rpx 36rpx 0 0;
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4E46;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: var(--warm-cream);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8B7E7A;
}

.modal-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #5D4E46;
}

.form-input {
  background: var(--warm-white);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.1);
  color: #5D4E46;
}

.form-textarea {
  background: var(--warm-white);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.1);
  color: #5D4E46;
  min-height: 120rpx;
}

.picker-input {
  background: var(--warm-white);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.1);
  color: #5D4E46;
}

.modal-footer {
  margin-top: 32rpx;
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: var(--warm-cream);
  color: #8B7E7A;
}

.confirm-btn {
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 138, 122, 0.3);
}

/* 药单组创建弹窗 */
.cluster-modal {
  max-height: 85vh;
}

.medication-select-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.medication-select-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: var(--warm-white);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.1);
  transition: all 0.2s ease;
}

.medication-select-item.selected {
  background: rgba(255, 138, 122, 0.1);
  border-color: #FF8A7A;
}

.select-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
  background: white;
}

.medication-select-item.selected .select-checkbox {
  background: #FF8A7A;
  border-color: #FF8A7A;
}

.select-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.select-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #5D4E46;
}

.select-dosage {
  font-size: 24rpx;
  color: #8B7E7A;
}

.selected-count {
  text-align: center;
  padding: 16rpx;
  background: rgba(168, 230, 207, 0.15);
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #3A7A5C;
  font-weight: 600;
}

.empty-select {
  text-align: center;
  padding: 40rpx;
  color: #B5A8A3;
  font-size: 26rpx;
}

/* 编辑药单组弹窗 */
.current-medications-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.current-med-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: var(--warm-cream);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
}

.current-med-item .med-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #5D4E46;
}

.remove-med-btn {
  font-size: 24rpx;
  color: #FF6B6B;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 12rpx;
}

/* 服药记录弹窗 */
.records-modal {
  max-height: 70vh;
}

.records-list {
  max-height: 500rpx;
}

.record-item {
  padding: 20rpx;
  background: var(--warm-cream);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #5D4E46;
}

.record-time {
  font-size: 24rpx;
  color: #8B7E7A;
}

.record-frequency {
  margin-bottom: 8rpx;
}

.frequency-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: rgba(255, 138, 122, 0.15);
  color: #FF8A7A;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.record-notes {
  font-size: 24rpx;
  color: #8B7E7A;
  line-height: 36rpx;
}

.empty-records {
  text-align: center;
  padding: 60rpx;
  color: #B5A8A3;
}

/* Round-2 polish */
.container.app-theme {
  padding-top: 10rpx;
}

.container.app-theme .page-header {
  border-radius: 28rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  background: linear-gradient(135deg, #3f7fc9, #5ea2ea);
}

.container.app-theme .add-btn,
.container.app-theme .action-btn {
  border: 1rpx solid rgba(255, 255, 255, 0.32);
}

.container.app-theme .medication-card {
  border-radius: 24rpx;
}

.container.app-theme .delete-btn {
  border-radius: 999rpx;
}

.container.app-theme .date-item,
.container.app-theme .notes-section {
  border-radius: 16rpx;
}

.container.app-theme .primary-btn,
.container.app-theme .secondary-btn {
  border-radius: 16rpx;
  min-height: 102rpx;
  justify-content: center;
}

.container.app-theme .modal-content {
  border-radius: 28rpx 28rpx 0 0;
  border: 1rpx solid rgba(86, 129, 180, 0.22);
}

.container.app-theme .form-input,
.container.app-theme .picker-input,
.container.app-theme .form-textarea {
  border-radius: 16rpx;
  border: 1rpx solid rgba(86, 129, 180, 0.22);
}
