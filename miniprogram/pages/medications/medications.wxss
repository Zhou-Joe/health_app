/* pages/medications/medications.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.3);
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.add-btn {
  display: inline-flex;
  background: rgba(255, 255, 255, 0.25);
  color: #ffffff;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 50rpx;
}

.add-btn::after {
  border: none;
}

.add-btn-content {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
}

.add-btn .icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 药单卡片 */
.medication-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.medication-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.medicine-info {
  flex: 1;
}

.medicine-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.dosage {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.actions {
  margin-left: 20rpx;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 8rpx 16rpx;
}

/* 进度条 */
.progress-section {
  margin-bottom: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #666666;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF9A9E;
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  border-radius: 8rpx;
  transition: width 0.3s;
}

/* 日期信息 */
.date-section {
  display: flex;
  gap: 40rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.date-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.date-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 备注 */
.notes-section {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #fff9e6;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffa940;
}

.notes-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.notes-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.checkin-btn,
.records-btn {
  flex: 1;
  min-width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 24rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}

/* 补签选择器样式 */
.makeup-btn {
  flex: 1;
  min-width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #FF9A9E;
  padding: 24rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  background: #ffffff;
  color: #FF9A9E;
}

.checkin-btn .icon,
.records-btn .icon,
.makeup-btn .icon {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #ffffff;
}

.secondary-btn {
  background: #ffffff;
  color: #FF9A9E;
  border: 2rpx solid #FF9A9E;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.empty-add-btn {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #ffffff;
  border: none;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.records-modal {
  max-height: 60vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 36rpx;
  color: #999999;
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
  max-height: 60vh;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 24rpx 20rpx;
  min-height: 80rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.5;
  color: #333333;
}

.form-input {
  height: 80rpx;
}

.picker-input {
  padding: 24rpx 20rpx;
  min-height: 80rpx;
  line-height: 80rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.form-textarea {
  height: 150rpx;
  line-height: 1.6;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666666;
}

.confirm-btn {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #ffffff;
}

/* 服药记录 */
.records-list {
  max-height: 50vh;
}

.record-item {
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

.frequency-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #e6f0ff;
  color: #1890ff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.record-notes {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-top: 12rpx;
}

.empty-records {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-records .empty-text {
  font-size: 28rpx;
  color: #999999;
}
