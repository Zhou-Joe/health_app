/* pages/medications/medications.wxss - 温暖治愈风格 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F0 0%, #FFFEF9 100%);
  padding: 24rpx;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #FFA07A, #FFB380);
  border-radius: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(255, 160, 122, 0.25);
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
}

.add-btn {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 16rpx 28rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: white;
  font-weight: 600;
  border: none;
}

.add-btn-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.add-btn .icon {
  font-size: 32rpx;
  font-weight: 300;
}

.medication-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.medication-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 138, 122, 0.1);
}

.medicine-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.medicine-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4E46;
}

.dosage {
  font-size: 26rpx;
  color: #8B7E7A;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.delete-btn {
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.progress-section {
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #5D4E46;
  font-weight: 500;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: #FF8A7A;
}

.progress-bar {
  height: 16rpx;
  background: var(--warm-cream);
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF8A7A, #FFB4A2);
  border-radius: 12rpx;
  transition: width 0.3s ease;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.date-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: var(--warm-cream);
  border-radius: 20rpx;
}

.date-label {
  font-size: 22rpx;
  color: #B5A8A3;
}

.date-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #5D4E46;
}

.notes-section {
  background: rgba(168, 230, 207, 0.15);
  border-radius: 20rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 8rpx;
}

.notes-label {
  font-size: 24rpx;
  color: #3A7A5C;
  font-weight: 600;
  flex-shrink: 0;
}

.notes-text {
  font-size: 24rpx;
  color: #5D4E46;
  line-height: 40rpx;
}

.card-actions {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
}

.primary-btn, .secondary-btn {
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
}

.primary-btn {
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 138, 122, 0.3);
}

.primary-btn:active {
  transform: scale(0.96);
}

.secondary-btn {
  background: var(--warm-cream);
  color: #5D4E46;
  border: 2rpx solid rgba(255, 138, 122, 0.15);
}

.secondary-btn:active {
  background: rgba(255, 138, 122, 0.1);
}

.checkin-btn .icon,
.records-btn .icon,
.makeup-btn .icon {
  font-size: 32rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4E46;
}

.empty-desc {
  font-size: 26rpx;
  color: #B5A8A3;
  text-align: center;
  line-height: 40rpx;
}

.empty-add-btn {
  margin-top: 24rpx;
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
  border-radius: 28rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.3);
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(93, 78, 70, 0.5);
}

.modal-content {
  position: relative;
  width: 100%;
  background: white;
  border-radius: 36rpx 36rpx 0 0;
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4E46;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: var(--warm-cream);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8B7E7A;
}

.modal-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #5D4E46;
}

.form-input {
  background: var(--warm-white);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 138, 122, 0.1);
  color: #5D4E46;
}

.modal-footer {
  margin-top: 32rpx;
}

.modal-submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #FF8A7A, #FFB4A2);
  color: white;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.3);
}

.modal-submit-btn:active {
  transform: scale(0.96);
}

/* Round-2 polish */
.container.app-theme {
  padding-top: 10rpx;
}

.container.app-theme .page-header {
  border-radius: 28rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  background: linear-gradient(135deg, #3f7fc9, #5ea2ea);
}

.container.app-theme .add-btn {
  border: 1rpx solid rgba(255, 255, 255, 0.32);
}

.container.app-theme .medication-card {
  border-radius: 24rpx;
}

.container.app-theme .delete-btn {
  border-radius: 999rpx;
}

.container.app-theme .date-item,
.container.app-theme .notes-section {
  border-radius: 16rpx;
}

.container.app-theme .primary-btn,
.container.app-theme .secondary-btn {
  border-radius: 16rpx;
  min-height: 102rpx;
  justify-content: center;
}

.container.app-theme .modal-content {
  border-radius: 28rpx 28rpx 0 0;
  border: 1rpx solid rgba(86, 129, 180, 0.22);
}

.container.app-theme .form-input,
.container.app-theme .picker-input,
.container.app-theme .form-textarea {
  border-radius: 16rpx;
  border: 1rpx solid rgba(86, 129, 180, 0.22);
}
