/* pages/login/login.wxss */

/* ==================== 温暖治愈风格变量 ==================== */
page {
  --warm-coral: #FF8A7A;
  --warm-peach: #FFB4A2;
  --warm-cream: #FFF5F0;
  --warm-white: #FFFEF9;
  --warm-mint: #A8E6CF;
  --warm-lavender: #E8D5F2;
  --warm-yellow: #FFF3B0;
  --text-primary: #5D4E46;
  --text-secondary: #8B7E7A;
  --text-light: #B5A8A3;
}

/* ==================== 主容器 ==================== */
.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F0 0%, #FFFEF9 50%, #FFF9F5 100%);
  padding: 80rpx 50rpx 60rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 温暖的光晕效果 */
.warm-glow {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
  animation: float 8s ease-in-out infinite;
}

.glow-1 {
  width: 450rpx;
  height: 450rpx;
  background: radial-gradient(circle, rgba(255, 138, 122, 0.5) 0%, transparent 70%);
  top: -80rpx;
  right: -120rpx;
  animation-delay: 0s;
}

.glow-2 {
  width: 380rpx;
  height: 380rpx;
  background: radial-gradient(circle, rgba(168, 230, 207, 0.4) 0%, transparent 70%);
  top: 250rpx;
  left: -90rpx;
  animation-delay: 2s;
}

.glow-3 {
  width: 320rpx;
  height: 320rpx;
  background: radial-gradient(circle, rgba(255, 179, 194, 0.3) 0%, transparent 70%);
  bottom: 180rpx;
  right: -70rpx;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.4;
  }
  50% {
    transform: translateY(-30rpx) scale(1.05);
    opacity: 0.5;
  }
}

/* ==================== 头部区域 ==================== */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

.logo-wrapper {
  margin-bottom: 24rpx;
  animation: heartbeat 2s ease-in-out infinite;
}

@keyframes heartbeat {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

.logo-icon {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 68rpx;
  background: linear-gradient(135deg, var(--warm-coral), var(--warm-peach));
  border-radius: 50%;
  box-shadow:
    0 10rpx 40rpx rgba(255, 138, 122, 0.3),
    0 0 0 8rpx rgba(255, 255, 255, 0.5),
    inset 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 138, 122, 0.15);
}

.app-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  letter-spacing: 1rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.subtitle-tag {
  background: linear-gradient(135deg, var(--warm-mint), #C8F7DC);
  color: #3A7A5C;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.3);
}

/* ==================== 功能介绍部分 ==================== */
.features-section {
  margin-bottom: 36rpx;
  position: relative;
  z-index: 2;
}

.features-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.feature-card {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 28rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 4rpx 20rpx rgba(255, 138, 122, 0.08),
    0 0 0 1rpx rgba(255, 255, 255, 0.6);
  border: 2rpx solid rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
  min-height: 240rpx;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
}

.feature-icon-upload {
  background: linear-gradient(135deg, #FFE5E0, #FFD4CC);
}

.feature-icon-ai {
  background: linear-gradient(135deg, #E5F0FF, #D4E4FF);
}

.feature-icon-integration {
  background: linear-gradient(135deg, #E0FFE5, #CCFFD4);
}

.feature-icon-trends {
  background: linear-gradient(135deg, #FFF5E0, #FFEACC);
}

.feature-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 18rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 26rpx;
  padding: 0 4rpx;
}

/* ==================== 登录表单 ==================== */
.login-form {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  padding: 50rpx 40rpx;
  box-shadow:
    0 8rpx 32rpx rgba(255, 138, 122, 0.12),
    0 0 0 1rpx rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 2;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: var(--warm-white);
  border-radius: 24rpx;
  padding: 0 24rpx;
  box-shadow:
    0 4rpx 16rpx rgba(255, 138, 122, 0.08),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02);
  border: 2rpx solid rgba(255, 138, 122, 0.1);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  box-shadow:
    0 6rpx 24rpx rgba(255, 138, 122, 0.15),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02);
  border-color: var(--warm-coral);
  transform: translateY(-2rpx);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 14rpx;
  opacity: 0.6;
}

.input-field {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.input-placeholder {
  color: var(--text-light);
  font-weight: 400;
}

/* 协议勾选 */
.agreement-check {
  margin: 24rpx 0 28rpx;
  padding: 0 8rpx;
}

.checkbox-label {
  display: flex;
  align-items: flex-start;
  font-size: 24rpx;
  line-height: 38rpx;
}

.custom-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  border: 3rpx solid var(--warm-peach);
  background: var(--warm-white);
  margin-right: 14rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  box-shadow: 0 2rpx 8rpx rgba(255, 138, 122, 0.1);
}

.custom-checkbox.checked {
  background: linear-gradient(135deg, var(--warm-coral), var(--warm-peach));
  border-color: var(--warm-coral);
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(255, 138, 122, 0.3);
}

.checkmark {
  color: white;
  font-size: 26rpx;
  font-weight: bold;
  animation: checkmark 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes checkmark {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.check-content {
  flex: 1;
  display: inline;
}

.check-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.link-text {
  font-size: 24rpx;
  color: var(--warm-coral);
  font-weight: 600;
  text-decoration: underline;
  text-underline-offset: 2rpx;
}

/* ==================== 按钮样式 ==================== */
.warm-btn-primary,
.warm-btn-wechat {
  width: 100%;
  height: 96rpx;
  border-radius: 28rpx;
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.25);
  position: relative;
  overflow: hidden;
}

.warm-btn-primary::before,
.warm-btn-wechat::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.warm-btn-primary:active::before,
.warm-btn-wechat:active::before {
  left: 100%;
}

.warm-btn-primary {
  background: linear-gradient(135deg, var(--warm-coral) 0%, var(--warm-peach) 100%);
  color: white;
  margin-top: 28rpx;
}

.warm-btn-primary:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(255, 138, 122, 0.2);
}

.warm-btn-primary[disabled] {
  opacity: 0.5;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.btn-icon {
  font-size: 32rpx;
}

.warm-btn-wechat {
  background: linear-gradient(135deg, #A8E6CF 0%, #C8F7DC 100%);
  color: #3A7A5C;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.3);
}

.warm-btn-wechat:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.25);
}

.wechat-icon {
  font-size: 32rpx;
}

/* ==================== 分隔线 ==================== */
.divider {
  display: flex;
  align-items: center;
  margin: 28rpx 0 24rpx;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 138, 122, 0.2), transparent);
}

.divider-or {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 500;
}

/* ==================== 底部装饰 ==================== */
.bottom-decoration {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  z-index: 1;
}

.decoration-circle {
  border-radius: 50%;
  opacity: 0.6;
  animation: bounce 2s ease-in-out infinite;
}

.circle-1 {
  width: 24rpx;
  height: 24rpx;
  background: var(--warm-coral);
  animation-delay: 0s;
}

.circle-2 {
  width: 32rpx;
  height: 32rpx;
  background: var(--warm-mint);
  animation-delay: 0.2s;
}

.circle-3 {
  width: 24rpx;
  height: 24rpx;
  background: var(--warm-peach);
  animation-delay: 0.4s;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* ==================== 弹窗样式 ==================== */
.custom-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(93, 78, 70, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.custom-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 600rpx;
  max-height: 80vh;
  background: var(--warm-white);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(93, 78, 70, 0.2);
  transform: scale(0.8);
  transition: transform 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.custom-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 32rpx;
  background: linear-gradient(135deg, var(--warm-coral), var(--warm-peach));
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}

.modal-close {
  width: 44rpx;
  height: 44rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 30rpx;
  font-weight: 300;
}

.modal-body {
  flex: 1;
  padding: 36rpx;
  max-height: 60vh;
  background: var(--warm-white);
}

.modal-text {
  font-size: 26rpx;
  line-height: 44rpx;
  color: var(--text-secondary);
  white-space: pre-wrap;
  word-break: break-all;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid rgba(255, 138, 122, 0.1);
  display: flex;
  justify-content: center;
  background: var(--warm-white);
}

.modal-btn {
  width: 220rpx;
  height: 76rpx;
  background: linear-gradient(135deg, var(--warm-coral), var(--warm-peach));
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255, 138, 122, 0.3);
}
