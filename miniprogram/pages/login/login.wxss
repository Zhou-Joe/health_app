/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: #FFFFFF;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(255, 154, 158, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(168, 237, 234, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 40% 80%, rgba(254, 207, 239, 0.12) 0%, transparent 40%),
    radial-gradient(circle at 90% 20%, rgba(255, 154, 158, 0.08) 0%, transparent 30%),
    radial-gradient(circle at 10% 90%, rgba(168, 237, 234, 0.1) 0%, transparent 35%);
  background-size: 100% 100%, 100% 100%, 100% 100%, 100% 100%, 100% 100%;
  padding: 120rpx 60rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.login-container::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #FFE5E5 0%, #E8F5FF 100%);
  border-radius: 50%;
  opacity: 0.6;
}

.login-container::after {
  content: '';
  position: absolute;
  bottom: -80rpx;
  left: -80rpx;
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #E8F5FF 0%, #E0F2F1 100%);
  border-radius: 50%;
  opacity: 0.5;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

.app-name {
  font-size: 52rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.app-desc {
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 1rpx;
}

.login-form {
  background-color: #FAFAFA;
  border-radius: 32rpx;
  padding: 70rpx 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  z-index: 1;
}

.form-item {
  margin-bottom: 28rpx;
}

.input-field {
  width: 100%;
  height: 96rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid #F0F0F0;
  transition: all 0.3s;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  border: none;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}

.wechat-login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #A8EDEA 0%, #FED6E3 100%);
  color: #5A4A4A;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(168, 237, 234, 0.3);
}

.divider {
  display: flex;
  align-items: center;
  margin: 36rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background-color: #E8E8E8;
}

.divider-text {
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #BBBBBB;
}

.login-footer {
  margin-top: auto;
  text-align: center;
  padding-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 24rpx;
  color: #CCCCCC;
}
