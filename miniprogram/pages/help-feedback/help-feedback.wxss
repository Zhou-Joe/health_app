.help-feedback-container {
  min-height: 100vh;
  padding: 20rpx;
  background: #F6F8FC;
}

.section {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.faq-list {
  padding: 0 30rpx;
}

.faq-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
}

.expand-icon {
  font-size: 24rpx;
  color: #95a5a6;
  margin-left: 20rpx;
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.faq-answer.expanded {
  max-height: 500rpx;
  padding-bottom: 30rpx;
}

.answer-text {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
}

.feedback-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.input-placeholder {
  color: #bdc3c7;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3A78C2 0%, #5B9BD5 100%);
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  margin-top: 20rpx;
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #a0c4e8 0%, #b8d4f0 100%);
}

.contact-list {
  padding: 0 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
  margin-bottom: 6rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.contact-action {
  font-size: 26rpx;
  color: #3A78C2;
  padding: 10rpx 20rpx;
  background: rgba(58, 120, 194, 0.1);
  border-radius: 10rpx;
}
