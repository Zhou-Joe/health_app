<view class="settings-container">
  <view class="user-card card">
    <image class="avatar" src="/images/avatar.png"></image>
    <text class="username">{{userInfo.username}}</text>
  </view>

  <view class="settings-list card">
    <view class="setting-item" bindtap="goToProfile">
      <text class="item-label">个人信息</text>
      <text class="item-arrow">></text>
    </view>
    <view class="setting-item" bindtap="checkServices">
      <text class="item-label">服务状态</text>
      <text class="item-arrow">></text>
    </view>
  </view>

  <view class="settings-list card">
    <view class="setting-item">
      <text class="item-label">服务器地址</text>
      <text class="item-value">{{baseUrl}}</text>
    </view>
  </view>

  <button class="logout-btn btn-danger" bindtap="handleLogout">退出登录</button>
</view>
