/* pages/settings/settings.wxss - 现代设计风格 */
page {
  background: #FAF7F5;
  --primary: #E85D4C;
  --secondary: #4A90A4;
  --accent: #F5A962;
}

.settings-container {
  min-height: 100vh;
  padding: 0;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.35;
  animation: float 18s ease-in-out infinite;
}

.blob-1 {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.3), transparent);
  top: -150rpx;
  right: -100rpx;
}

.blob-2 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(74, 144, 164, 0.25), transparent);
  bottom: -100rpx;
  left: -100rpx;
  animation-delay: 6s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -30rpx) scale(1.05); }
}

/* 用户卡片 */
.user-card {
  margin: 60rpx 20rpx 24rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 16rpx 40rpx rgba(232, 93, 76, 0.25);
  position: relative;
  z-index: 1;
}

.avatar-wrapper {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.avatar-wrapper:active {
  opacity: 0.8;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-emoji {
  font-size: 48rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 700;
  color: white;
}

.user-email {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.edit-hint {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Section */
.section {
  margin: 0 20rpx 24rpx;
  position: relative;
  z-index: 1;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
  padding-left: 8rpx;
}

.section-list {
  background: white;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #FAF7F5;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-label {
  font-size: 26rpx;
  color: #2A2A2A;
  font-weight: 500;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-value {
  font-size: 24rpx;
  color: #999;
}

.item-arrow {
  font-size: 32rpx;
  color: #CCC;
}

/* 退出登录 */
.action-section {
  padding: 0 20rpx 40rpx;
  position: relative;
  z-index: 1;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  color: #E85D4C;
  border: 2rpx solid rgba(232, 93, 76, 0.2);
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.logout-btn:active {
  background: rgba(232, 93, 76, 0.08);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(42, 42, 42, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.modal-container {
  width: 100%;
  max-width: 560rpx;
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: #FAF7F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

.modal-content {
  margin-bottom: 24rpx;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  background: #FAF7F5;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #2A2A2A;
}

.picker-value {
  width: 100%;
  height: 88rpx;
  background: #FAF7F5;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #2A2A2A;
  line-height: 88rpx;
}

.gender-options {
  display: flex;
  gap: 16rpx;
}

.gender-option {
  flex: 1;
  height: 120rpx;
  background: #FAF7F5;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.gender-option.active {
  background: rgba(232, 93, 76, 0.1);
  border-color: var(--primary);
}

.gender-icon {
  font-size: 44rpx;
}

.gender-text {
  font-size: 24rpx;
  color: #2A2A2A;
  font-weight: 500;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #FAF7F5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(232, 93, 76, 0.3);
}

/* Round-2 polish */
.settings-container.app-theme .user-card {
  background: linear-gradient(135deg, #3f7fc9, #5da0e8) !important;
  border: 1rpx solid rgba(255, 255, 255, 0.22) !important;
  box-shadow: 0 18rpx 34rpx rgba(45, 102, 170, 0.28) !important;
}

.settings-container.app-theme .user-name {
  color: #ffffff;
  font-size: 30rpx;
}

.settings-container.app-theme .section-title {
  font-size: 25rpx;
  font-weight: 700;
  color: #40658f;
}

.settings-container.app-theme .section-list {
  border-radius: 24rpx;
}

.settings-container.app-theme .list-item {
  padding-top: 26rpx;
  padding-bottom: 26rpx;
}

.settings-container.app-theme .item-label {
  color: #24486f;
  font-weight: 600;
}

.settings-container.app-theme .item-value {
  color: #6783a6;
}

.settings-container.app-theme .logout-btn {
  border-radius: 22rpx;
  border-width: 1rpx;
}

.settings-container.app-theme .modal-container {
  border-radius: 24rpx;
}

.settings-container.app-theme .modal-input,
.settings-container.app-theme .picker-value {
  border-radius: 16rpx;
}
