/* pages/settings/settings.wxss */
.settings-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* ==================== 用户卡片 ==================== */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 设置分组 ==================== */
.settings-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.settings-list {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #F8F9FA;
}

.item-label {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}

.item-value {
  font-size: 28rpx;
  color: #999999;
  margin-left: 20rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

.item-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
}

.server-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333333;
  margin-left: 20rpx;
}

/* ==================== 服务状态 ==================== */
.service-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.service-item:last-child {
  border-bottom: none;
}

.service-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.service-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.service-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-available {
  background-color: #D5F4E6;
  color: #27AE60;
}

.status-unavailable,
.status-error {
  background-color: #F8D7DA;
  color: #721C24;
}

.service-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

/* ==================== 操作按钮 ==================== */
.action-section {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  background-color: #FFFFFF;
  color: #E74C3C;
  border: 1rpx solid #E74C3C;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.logout-btn:active {
  background-color: #FEF2F2;
}
