/* pages/settings/settings.wxss */
.settings-container {
  min-height: 100vh;
  background-color: #FAFAFA;
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* ==================== 用户卡片 ==================== */
.user-card {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 设置分组 ==================== */
.settings-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 26rpx;
  color: #AAAAAA;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.settings-list {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #FAFAFA;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #F8F9FA;
}

.item-label {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}

.item-value {
  font-size: 28rpx;
  color: #AAAAAA;
  margin-left: 20rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #AAAAAA;
  margin-left: 20rpx;
}

.item-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
}

.server-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333333;
  margin-left: 20rpx;
}

/* ==================== 服务状态 ==================== */
.service-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #FAFAFA;
}

.service-item:last-child {
  border-bottom: none;
}

.service-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.service-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.service-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-available {
  background-color: #D5F4E6;
  color: #27AE60;
}

.status-unavailable,
.status-error {
  background-color: #F8D7DA;
  color: #721C24;
}

.service-desc {
  font-size: 24rpx;
  color: #AAAAAA;
  line-height: 1.6;
}

/* ==================== 操作按钮 ==================== */
.action-section {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  background-color: #FFFFFF;
  color: #E74C3C;
  border: 1rpx solid #E74C3C;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.logout-btn:active {
  background-color: #FEF2F2;
}

/* ==================== 个人信息编辑弹窗 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-container {
  width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-content {
  min-height: 120rpx;
  margin-bottom: 30rpx;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  background-color: #F8F9FA;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-value {
  width: 100%;
  height: 88rpx;
  background-color: #F8F9FA;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 88rpx;
  box-sizing: border-box;
}

.gender-options {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  height: 120rpx;
  background-color: #F8F9FA;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
}

.gender-option.active {
  background-color: #FFE5E5;
  border-color: #FF9A9E;
}

.gender-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.gender-text {
  font-size: 28rpx;
  color: #333333;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background-color: #FAFAFA;
  color: #666666;
}

.confirm-btn {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #FFFFFF;
}
