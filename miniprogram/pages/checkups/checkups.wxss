.checkups-container {
  padding: 20rpx;
  background: #FFFFFF;
  background-image:
    radial-gradient(circle at 15% 25%, rgba(255, 154, 158, 0.06) 0%, transparent 50%),
    radial-gradient(circle at 85% 75%, rgba(168, 237, 234, 0.06) 0%, transparent 50%);
  min-height: 100vh;
}

.checkup-item {
  margin-bottom: 20rpx;
  background: #FAFAFA;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 2rpx solid #F0F0F0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.checkup-item:active {
  transform: scale(0.98);
  background-color: #F5F5F5;
}

.checkup-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.main-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.checkup-body {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.checkup-date {
  font-size: 26rpx;
  color: #FF9A9E;
  font-weight: 500;
}

.hospital {
  font-size: 26rpx;
  color: #666;
}

.checkup-notes {
  margin: 12rpx 0;
  padding: 12rpx;
  background: #FFF8E1;
  background: linear-gradient(135deg, #FFF8E1 0%, #FFF3CD 100%);
  border-left: 4rpx solid #FFDAB9;
  border-radius: 12rpx;
}

.notes-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
  word-break: break-all;
}

.checkup-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #F0F0F0;
}

.footer-left {
  flex: 1;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.indicator-count {
  font-size: 26rpx;
  color: #666;
}

.view-detail {
  font-size: 26rpx;
  color: #FF9A9E;
  font-weight: 500;
}

.delete-btn {
  font-size: 26rpx;
  color: #FF8A8A;
  padding: 8rpx 16rpx;
  background: #FFE5E5;
  border-radius: 12rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  color: #AAAAAA;
}
