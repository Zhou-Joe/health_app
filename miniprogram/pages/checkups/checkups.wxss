/* pages/checkups/checkups.wxss - 现代设计风格 */
page {
  background: #FAF7F5;
  --primary: #E85D4C;
  --secondary: #4A90A4;
  --accent: #F5A962;
}

.checkups-container {
  min-height: 100vh;
  padding: 0;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.35;
  animation: float 18s ease-in-out infinite;
}

.blob-1 {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.3), transparent);
  top: -150rpx;
  right: -100rpx;
}

.blob-2 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(74, 144, 164, 0.25), transparent);
  bottom: -100rpx;
  left: -100rpx;
  animation-delay: 6s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(20rpx, -30rpx) scale(1.05); }
}

/* 页面头部 */
.page-header {
  padding: 60rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.header-emoji {
  font-size: 48rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #2A2A2A;
}

.header-subtitle {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

.header-action {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(232, 93, 76, 0.3);
  transition: all 0.3s ease;
}

.header-action:active {
  transform: scale(0.9);
}

.header-action.select-btn {
  background: linear-gradient(135deg, var(--secondary), #5BA8B8);
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 164, 0.3);
}

.add-icon,
.select-icon {
  font-size: 40rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}

/* 批量操作栏 */
.batch-actions {
  margin: 0 20rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.batch-info {
  margin-bottom: 16rpx;
}

.selected-count {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
}

.batch-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.batch-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.batch-btn.select-all-btn {
  background: #F0F0F0;
  color: #333;
}

.batch-btn.download-pdf-btn {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.batch-btn.download-word-btn {
  background: linear-gradient(135deg, #4A90A4, #5BA8B8);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 164, 0.3);
}

.batch-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 28rpx;
}

/* 报告列表 */
.reports-list {
  padding: 0 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.report-card {
  background: white;
  border-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.report-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 28rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  pointer-events: none;
}

.report-card.selected::before {
  border-color: var(--secondary);
  background: rgba(74, 144, 164, 0.03);
}

.report-card.select-mode {
  padding-left: 88rpx;
}

.report-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 复选框 */
.checkbox-wrapper {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.checkbox {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 3rpx solid #E0E0E0;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: var(--secondary);
  border-color: var(--secondary);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 164, 0.3);
}

.check-icon {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.hospital-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.hospital-emoji {
  font-size: 36rpx;
}

.hospital-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.hospital-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.report-date {
  font-size: 22rpx;
  color: #999;
}

/* 下载按钮 */
.card-actions {
  display: flex;
  gap: 8rpx;
}

.download-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.download-btn:active {
  transform: scale(0.9);
  background: #E0E0E0;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.status-dot.status-completed {
  background: #4CAF50;
  box-shadow: 0 0 0 6rpx rgba(76, 175, 80, 0.15);
}

.status-dot.status-processing {
  background: var(--accent);
  box-shadow: 0 0 0 6rpx rgba(245, 169, 98, 0.15);
}

.card-middle {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.04);
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--primary);
  line-height: 1;
}

.stat-number.stat-warning {
  color: #FF6B6B;
}

.stat-number.stat-success {
  color: #4CAF50;
}

.stat-label {
  font-size: 20rpx;
  color: #999;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.08);
}

.card-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-note {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-arrow {
  font-size: 28rpx;
  color: #CCC;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-emoji {
  font-size: 100rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.empty-desc {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.empty-btn {
  margin-top: 24rpx;
  background: linear-gradient(135deg, var(--primary), #FF8A7A);
  padding: 20rpx 48rpx;
  border-radius: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(232, 93, 76, 0.3);
}

.empty-btn-text {
  font-size: 26rpx;
  font-weight: 600;
  color: white;
}
