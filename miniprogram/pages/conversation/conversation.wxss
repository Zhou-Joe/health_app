/* pages/conversation/conversation.wxss */

page {
  height: 100%;
  background: linear-gradient(180deg, #edf6ff 0%, #f8fbff 42%, #ffffff 100%);
}

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.bg-decoration {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  pointer-events: none;
  z-index: 0;
  background:
    radial-gradient(520rpx 380rpx at 12% 8%, rgba(74, 147, 255, 0.16), transparent 70%),
    radial-gradient(480rpx 360rpx at 88% 20%, rgba(60, 200, 170, 0.13), transparent 72%),
    radial-gradient(520rpx 380rpx at 30% 92%, rgba(35, 128, 230, 0.1), transparent 75%);
}

.chat-header {
  position: relative;
  z-index: 3;
  padding: 36rpx 24rpx 14rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-back,
.header-btn {
  width: 68rpx;
  height: 68rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(74, 147, 255, 0.2);
  box-shadow: 0 8rpx 18rpx rgba(37, 108, 188, 0.12);
}

.header-back:active,
.header-btn:active {
  transform: scale(0.96);
}

.back-icon {
  font-size: 44rpx;
  color: #2d5f98;
  line-height: 1;
}

.header-center {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.ai-avatar {
  width: 58rpx;
  height: 58rpx;
  margin-bottom: 2rpx;
}

.header-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #173a66;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 22rpx;
  color: #6181a7;
}

.header-right {
  display: flex;
  gap: 10rpx;
}

.btn-text {
  font-size: 22rpx;
  color: #2f608f;
  font-weight: 600;
}

.chat-meta {
  position: relative;
  z-index: 3;
  display: flex;
  gap: 12rpx;
  padding: 0 24rpx 10rpx;
}

.meta-chip {
  border-radius: 999rpx;
  padding: 8rpx 18rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(89, 149, 226, 0.25);
}

.meta-chip text {
  font-size: 22rpx;
  color: #3b6896;
}

.meta-chip.mode {
  border-color: rgba(53, 126, 207, 0.3);
}

.meta-chip.mode.continue {
  background: rgba(46, 128, 255, 0.12);
  border-color: rgba(46, 128, 255, 0.35);
}

.meta-chip.mode.continue text {
  color: #1d5fb8;
}

.message-list {
  position: relative;
  z-index: 2;
  flex: 1;
  padding: 10rpx 24rpx 18rpx;
}

.message-wrapper {
  margin-bottom: 28rpx;
  animation: slide-up 0.22s ease-out;
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(14rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-bubble {
  display: flex;
}

.user-message {
  justify-content: flex-end;
}

.ai-message {
  align-items: flex-start;
  gap: 10rpx;
}

.ai-indicator {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  flex-shrink: 0;
  background: linear-gradient(145deg, #45a1ff, #2cc7a9);
  box-shadow: 0 2rpx 8rpx rgba(45, 130, 230, 0.28);
}

.bubble-content {
  position: relative;
  max-width: 560rpx;
  padding: 22rpx 24rpx;
  border-radius: 22rpx;
  word-break: break-word;
}

.user-message .bubble-content {
  background: linear-gradient(145deg, #3d8dff, #2a6fd3);
  box-shadow: 0 8rpx 20rpx rgba(32, 102, 191, 0.24);
}

.ai-message .bubble-content {
  background: #ffffff;
  border: 1rpx solid rgba(94, 147, 217, 0.2);
  box-shadow: 0 8rpx 18rpx rgba(50, 113, 184, 0.12);
}

.user-message .bubble-tail,
.ai-message .bubble-tail {
  position: absolute;
  width: 0;
  height: 0;
  bottom: 12rpx;
}

.user-message .bubble-tail {
  right: -8rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid #2a6fd3;
  border-right: 10rpx solid #2a6fd3;
}

.ai-message .bubble-tail {
  left: -8rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid #ffffff;
  border-left: 10rpx solid #ffffff;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.7;
  white-space: pre-wrap;
}

.user-message .message-text {
  color: #ffffff;
}

.ai-message .message-text {
  color: #22334a;
}

.message-html {
  font-size: 28rpx;
  line-height: 1.7;
  color: #22334a;
}

.bubble-content:not(.expanded) {
  max-height: 360rpx;
  overflow: hidden;
}

.bubble-content:not(.expanded)::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 76rpx;
  pointer-events: none;
}

.ai-message .bubble-content:not(.expanded)::after {
  background: linear-gradient(180deg, rgba(255, 255, 255, 0), #ffffff 95%);
}

.user-message .bubble-content:not(.expanded)::after {
  background: linear-gradient(180deg, rgba(46, 114, 210, 0), rgba(42, 111, 211, 0.94) 95%);
}

.expand-hint {
  margin-top: 10rpx;
  text-align: center;
}

.expand-hint text {
  font-size: 22rpx;
  color: #4988d1;
}

.message-time {
  margin-top: 8rpx;
  text-align: center;
}

.message-time text {
  font-size: 21rpx;
  color: #8fa3b9;
}

.thinking-indicator {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 0 18rpx 24rpx;
}

.thinking-dots {
  display: flex;
  gap: 8rpx;
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx solid rgba(65, 131, 210, 0.2);
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #4f8dd3;
  animation: dot-bounce 1.2s infinite ease-in-out;
}

.dot-2 {
  animation-delay: 0.12s;
}

.dot-3 {
  animation-delay: 0.24s;
}

@keyframes dot-bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.45;
  }
  40% {
    transform: scale(1.15);
    opacity: 1;
  }
}

.thinking-text {
  font-size: 24rpx;
  color: #5f7da0;
}

.input-area {
  position: relative;
  z-index: 5;
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  padding: 14rpx 20rpx 30rpx;
  background: rgba(246, 251, 255, 0.9);
  border-top: 1rpx solid rgba(124, 170, 230, 0.18);
}

.attach-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border: 1rpx solid rgba(83, 144, 220, 0.28);
  box-shadow: 0 8rpx 18rpx rgba(50, 117, 191, 0.14);
}

.attach-icon {
  font-size: 34rpx;
  color: #2e6fbf;
}

.input-wrapper {
  flex: 1;
  min-height: 72rpx;
  max-height: 240rpx;
  border-radius: 24rpx;
  padding: 14rpx 20rpx;
  background: #ffffff;
  border: 1rpx solid rgba(83, 144, 220, 0.24);
  box-shadow: 0 8rpx 18rpx rgba(50, 117, 191, 0.14);
}

.message-input {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  color: #1e3149;
}

.send-btn {
  width: 96rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #d6e7fb;
  border: 1rpx solid rgba(71, 125, 196, 0.2);
}

.send-btn.active {
  background: linear-gradient(145deg, #3f93ff, #2a6fd3);
  border-color: rgba(36, 95, 183, 0.65);
}

.send-icon {
  font-size: 24rpx;
  font-weight: 700;
  color: #5f7da3;
}

.send-btn.active .send-icon {
  color: #ffffff;
}

.attachment-menu {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 20;
}

.menu-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(9, 23, 41, 0.24);
}

.menu-content {
  position: absolute;
  left: 24rpx;
  bottom: 126rpx;
  display: flex;
  gap: 12rpx;
  padding: 12rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.96);
  box-shadow: 0 14rpx 30rpx rgba(31, 91, 165, 0.2);
}

.menu-item {
  position: relative;
  width: 132rpx;
  padding: 16rpx 10rpx;
  border-radius: 14rpx;
  text-align: center;
  background: #f5f9ff;
  border: 1rpx solid rgba(94, 148, 217, 0.2);
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin: 0 auto 6rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #2366b8;
  background: rgba(74, 147, 255, 0.14);
}

.menu-text {
  font-size: 22rpx;
  color: #2f587f;
}

.menu-badge {
  position: absolute;
  right: 10rpx;
  top: 8rpx;
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  padding: 0 8rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  color: #ffffff;
  background: #2f7fe0;
}

.bottom-sheet {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 30;
}

.sheet-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(9, 23, 41, 0.34);
}

.sheet-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 72vh;
  border-radius: 28rpx 28rpx 0 0;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  box-shadow: 0 -12rpx 34rpx rgba(18, 63, 119, 0.2);
}

.sheet-handle {
  width: 76rpx;
  height: 8rpx;
  border-radius: 4rpx;
  margin: 14rpx auto 8rpx;
  background: #d2dfee;
}

.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #e9f0f9;
}

.sheet-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1b3f69;
}

.sheet-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.sheet-btn {
  font-size: 25rpx;
  color: #5a7ba2;
}

.sheet-btn.primary {
  color: #246cc3;
  font-weight: 700;
}

.sheet-list {
  flex: 1;
  padding: 14rpx 20rpx 24rpx;
}

.sheet-item {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 12rpx;
  border-radius: 16rpx;
  padding: 18rpx;
  border: 1rpx solid #dce8f6;
  background: #f8fbff;
}

.sheet-item.selected {
  background: rgba(70, 142, 234, 0.12);
  border-color: rgba(46, 126, 224, 0.45);
}

.item-icon {
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 14rpx;
  font-size: 25rpx;
  font-weight: 700;
  color: #1d62b7;
  background: rgba(75, 148, 242, 0.14);
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-title {
  font-size: 27rpx;
  font-weight: 600;
  color: #1f446d;
}

.item-desc {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #6e89a6;
}

.item-check {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  border: 2rpx solid #c1d7ef;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-check.checked {
  background: #327ddd;
  border-color: #327ddd;
}

.check-icon {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 700;
}

/* Round-2 polish */
.chat-container.app-theme .chat-header {
  padding-top: 42rpx;
  padding-bottom: 18rpx;
}

.chat-container.app-theme .header-back,
.chat-container.app-theme .header-btn {
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.96);
}

.chat-container.app-theme .chat-meta {
  margin: 0 20rpx 10rpx;
  padding: 10rpx 12rpx;
  border-radius: 18rpx;
}

.chat-container.app-theme .meta-chip {
  padding: 8rpx 16rpx;
}

.chat-container.app-theme .message-list {
  padding: 12rpx 22rpx 22rpx;
}

.chat-container.app-theme .message-wrapper {
  margin-bottom: 24rpx;
}

.chat-container.app-theme .message-wrapper:last-child {
  margin-bottom: 10rpx;
}

.chat-container.app-theme .bubble-content {
  border-radius: 24rpx;
}

.chat-container.app-theme .ai-message .bubble-content {
  background: linear-gradient(180deg, #ffffff, #f9fcff);
}

.chat-container.app-theme .input-area {
  margin: 0 16rpx 12rpx;
  padding: 14rpx;
  border-radius: 22rpx;
  background: rgba(242, 248, 255, 0.92);
  border: 1rpx solid rgba(83, 143, 218, 0.2);
  box-shadow: 0 14rpx 26rpx rgba(32, 86, 145, 0.16);
}

.chat-container.app-theme .attach-btn {
  border-radius: 18rpx;
}

.chat-container.app-theme .input-wrapper {
  border-radius: 20rpx;
}

.chat-container.app-theme .send-btn {
  width: 102rpx;
  border-radius: 18rpx;
}

.chat-container.app-theme .sheet-content {
  border-radius: 30rpx 30rpx 0 0;
  background: linear-gradient(180deg, #fbfdff 0%, #ffffff 100%);
}

.chat-container.app-theme .sheet-item {
  border-radius: 18rpx;
}
