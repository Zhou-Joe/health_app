/* pages/conversation/conversation.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #FAFAFA;
}

/* ==================== 顶部工具栏 ==================== */
.chat-header {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.header-left,
.header-center,
.header-right {
  flex: 1;
  display: flex;
  align-items: center;
}

.header-center {
  justify-content: center;
}

.header-right {
  justify-content: flex-end;
  gap: 12rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #5A4A4A;
  font-weight: 500;
}

.header-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #5A4A4A;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  line-height: 1;
}

.icon {
  font-size: 28rpx;
}

/* ==================== 报告选择器 ==================== */
.report-selector,
.medication-selector {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.report-selector,
.medication-selector {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1000;
}

.selector-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.selector-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.selector-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
}

.selector-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.selector-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.selected-hint {
  font-size: 26rpx;
  color: #FF9A9E;
}

.action-btn {
  font-size: 28rpx;
  color: #666666;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
}

.action-btn.primary {
  color: #FFFFFF;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
}

.report-list,
.medication-list {
  flex: 1;
  padding: 0 30rpx 30rpx;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  background: #FFFFFF;
  border: 2rpx solid #F0F0F0;
  transition: all 0.3s ease;
}

.list-item.special-option {
  background: linear-gradient(135deg, #E8F5E8 0%, #F0FFF0 100%);
  border-color: #28A745;
}

.list-item.special-option.selected {
  background: linear-gradient(135deg, #28A745 0%, #20C997 100%);
  border-color: #28A745;
}

.list-item.selected {
  background: #F0F4FF;
  border-color: #667eea;
}

.list-item:active {
  transform: scale(0.98);
}

.item-check {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  border: 3rpx solid #E0E0E0;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.item-check.checked {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  border-color: #FF9A9E;
}

.item-check text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.4;
}

.list-item.special-option.selected .item-title,
.list-item.selected .item-title {
  color: #333333;
}

.item-subtitle {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.list-item.special-option.selected .item-subtitle {
  color: rgba(255, 255, 255, 0.9);
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999999;
}

.meta-dot {
  font-size: 20rpx;
  color: #CCCCCC;
}

.empty-state {
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-state .empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-state .empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 12rpx;
}

.empty-state .empty-desc {
  font-size: 24rpx;
  color: #CCCCCC;
  display: block;
}

/* 加载状态 */
.loading-state {
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #F0F0F0;
  border-top-color: #FF9A9E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  display: block;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-state .loading-text {
  font-size: 26rpx;
  color: #999999;
}

/* 错误状态 */
.error-state {
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-state .error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.error-state .error-text {
  font-size: 26rpx;
  color: #FF6B6B;
  display: block;
  margin-bottom: 20rpx;
}

.error-state .error-action {
  font-size: 28rpx;
  color: #FF9A9E;
  padding: 16rpx 32rpx;
  border: 2rpx solid #FF9A9E;
  border-radius: 50rpx;
  display: inline-block;
}

/* ==================== 消息列表 ==================== */
.message-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.message-row {
  display: flex;
  margin-bottom: 40rpx;
  align-items: flex-start;
}

.message-row.user {
  justify-content: flex-end;
}

.message-row.ai {
  justify-content: flex-start;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.user-avatar {
  margin-left: 20rpx;
  background-color: #FF9A9E;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.ai-avatar {
  margin-right: 20rpx;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  box-shadow: 0 2rpx 8rpx rgba(118, 75, 162, 0.3);
}

.message-bubble {
  max-width: 70%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  position: relative;
}

.user-bubble {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  border-bottom-right-radius: 4rpx;
}

.user-bubble .message-text {
  font-size: 26rpx;
}

.ai-bubble {
  background-color: #FFFFFF;
  color: #333333;
  border-bottom-left-radius: 4rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  word-wrap: break-word;
  word-break: break-word;
}

.message-text {
  font-size: 26rpx;
  line-height: 1.8;
  word-wrap: break-word;
  white-space: pre-wrap;
  max-width: 100%;
  overflow-x: auto;
}

.ai-text {
  color: #333333;
}

/* 展开/收起按钮 */
.expand-btn {
  display: inline-block;
  font-size: 26rpx;
  color: #FF9A9E;
  font-weight: 500;
  margin-top: 12rpx;
  padding: 4rpx 0;
}

/* rich-text内容样式 */
.message-bubble rich-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #333333;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.message-meta {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  font-size: 26rpx;
}

.ai-bubble .message-meta {
  border-top-color: #F0F0F0;
}

.message-time {
  color: rgba(255, 255, 255, 0.8);
  font-size: 20rpx;
}

.ai-bubble .message-time {
  color: #AAAAAA;
  font-size: 20rpx;
}

.meta-action {
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  font-size: 20rpx;
}

.ai-bubble .meta-action {
  color: #FF9A9E;
  font-size: 20rpx;
}

/* AI输入状态 */
.ai-typing {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 12rpx;
}

.typing-indicator {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #FF9A9E;
  animation: typing 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

.typing-text {
  font-size: 26rpx;
  color: #AAAAAA;
}

.list-footer {
  height: 40rpx;
}

/* ==================== 输入区域 ==================== */
.input-area {
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.selected-reports-tip {
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #F0F4FF 0%, #E8EEFF 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reports-scroll {
  flex: 1;
  white-space: nowrap;
}

.tip-text {
  font-size: 26rpx;
  color: #FF9A9E;
  margin-right: 16rpx;
}

.tip-action {
  font-size: 26rpx;
  color: #FF9A9E;
  font-weight: 500;
  white-space: nowrap;
}

.selected-medications-tip {
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #FFF0F5 0%, #FFE4E1 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.medications-scroll {
  flex: 1;
  white-space: nowrap;
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.select-buttons {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.select-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 16rpx;
  background: #F8F9FA;
  border: 2rpx solid #E0E0E0;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 1;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.select-btn.report-btn {
  border-color: #667eea;
  background: linear-gradient(135deg, #E8EEFF 0%, #F0F4FF 100%);
}

.select-btn.medication-btn {
  border-color: #FF9A9E;
  background: linear-gradient(135deg, #FFF0F5 0%, #FFE4E1 100%);
}

.select-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.select-text {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

.message-input {
  flex: 1;
  max-width: 400rpx;
  min-height: 72rpx;
  max-height: 300rpx;
  padding: 20rpx 24rpx;
  background-color: #F8F9FA;
  border-radius: 24rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.action-buttons {
  flex-shrink: 0;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.send-btn {
  height: 72rpx;
  width: 120rpx;
  min-width: 120rpx;
  max-width: 120rpx;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0 8rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #5A4A4A;
  opacity: 0.5;
  transition: all 0.3s ease;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.send-btn.active {
  opacity: 1;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.4);
}

.send-btn[disabled] {
  opacity: 0.5;
}

.export-btn {
  background: linear-gradient(135deg, #A8EDEA 0%, #FED6E3 100%);
  color: #5A4A4A;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #5A4A4A;
}

.send-icon {
  font-size: 40rpx;
  color: #5A4A4A;
  line-height: 1;
}

.send-text {
  font-size: 26rpx;
  color: #5A4A4A;
}

/* 快捷问题 */
.quick-questions {
  display: flex;
  white-space: nowrap;
}

.quick-question-item {
  display: inline-block;
  padding: 16rpx 24rpx;
  background-color: #F8F9FA;
  border-radius: 50rpx;
  margin-right: 16rpx;
  border: 1rpx solid #E0E0E0;
  transition: all 0.3s ease;
}

.quick-question-item:active {
  background-color: #F0F4FF;
  border-color: #FF9A9E;
  transform: scale(0.95);
}

.quick-text {
  font-size: 26rpx;
  color: #666666;
}
