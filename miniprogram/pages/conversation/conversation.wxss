/* pages/conversation/conversation.wxss - 温暖友好的AI对话界面 */

page {
  background: linear-gradient(180deg, #FFF5F0 0%, #FFFEF9 100%);
  height: 100%;
}

/* ==================== 背景装饰 ==================== */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.organic-shape {
  position: absolute;
  border-radius: 50%;
  filter: blur(100rpx);
  opacity: 0.25;
  animation: float 20s ease-in-out infinite;
}

.shape-1 {
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(255, 138, 122, 0.4), transparent);
  top: -150rpx;
  right: -100rpx;
}

.shape-2 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(168, 230, 207, 0.3), transparent);
  bottom: 100rpx;
  left: -80rpx;
  animation-delay: 7s;
}

.shape-3 {
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(232, 93, 76, 0.25), transparent);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation-delay: 14s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(40rpx, -60rpx) scale(1.1); }
  66% { transform: translate(-30rpx, 40rpx) scale(0.95); }
}

/* ==================== 顶部导航 ==================== */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 20rpx;
  background: transparent;
  position: relative;
  z-index: 10;
}

.header-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(255, 138, 122, 0.1);
}

.back-icon {
  font-size: 36rpx;
  font-weight: 300;
  color: #E85D4C;
}

.header-center {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.ai-avatar-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-avatar {
  font-size: 56rpx;
  position: relative;
  z-index: 2;
}

.ai-avatar-pulse {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 138, 122, 0.3), transparent);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.6; }
  50% { transform: scale(1.3); opacity: 0.3; }
}

.header-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2A2A2A;
  letter-spacing: 1rpx;
}

.header-right {
  display: flex;
  gap: 16rpx;
}

.header-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(255, 138, 122, 0.1);
  position: relative;
}

.header-btn::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: #FF8A7A;
  border-radius: 50%;
  top: 12rpx;
  right: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
}

/* ==================== 消息列表 ==================== */
.message-list {
  flex: 1;
  padding: 20rpx 24rpx;
  overflow-y: scroll;
  position: relative;
  z-index: 1;
}

.message-wrapper {
  margin-bottom: 40rpx;
  animation: messageSlideIn 0.4s ease-out;
}

@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-bubble {
  display: flex;
  margin-bottom: 8rpx;
}

.ai-message {
  flex-direction: row;
  align-items: flex-start;
  gap: 12rpx;
}

.ai-indicator {
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #FF8A7A, #A8E6CF);
  border-radius: 50%;
  margin-top: 20rpx;
  flex-shrink: 0;
}

.user-message {
  justify-content: flex-end;
}

/* ==================== 消息气泡 ==================== */
.bubble-content {
  max-width: 520rpx;
  padding: 24rpx 28rpx;
  position: relative;
  word-wrap: break-word;
  transition: all 0.3s ease;
}

/* AI消息气泡 */
.ai-message .bubble-content {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF9F5 100%);
  border-radius: 24rpx 24rpx 24rpx 4rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 138, 122, 0.08);
  border: 2rpx solid rgba(255, 138, 122, 0.1);
}

.ai-message .bubble-tail {
  position: absolute;
  left: -8rpx;
  bottom: 12rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid #FFF9F5;
  border-left: 12rpx solid #FFF9F5;
}

/* 用户消息气泡 */
.user-message .bubble-content {
  background: linear-gradient(135deg, #FF8A7A, #E85D4C);
  border-radius: 24rpx 24rpx 4rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(232, 93, 76, 0.2);
}

.user-message .bubble-tail {
  position: absolute;
  right: -8rpx;
  bottom: 12rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid #E85D4C;
  border-right: 12rpx solid #E85D4C;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* HTML渲染的样式（rich-text组件） */
.message-html {
  font-size: 28rpx;
  line-height: 1.8;
  word-wrap: break-word;
  color: #3D3D3D;
}

/* HTML内容样式优化 - 注意：WeChat小程序rich-text组件不支持深度选择器 */
/* 样式需要在HTML标签的style属性中内联设置，或在convertMarkdown中处理 */

/* 折叠状态下的预览文本 */
.ai-message .bubble-content:not(.expanded) {
  max-height: 500rpx;
  overflow: hidden;
}

.ai-message .message-text {
  color: #3D3D3D;
  font-weight: 400;
}

.user-message .message-text {
  color: white;
  font-weight: 500;
}

/* 展开/折叠 */
.bubble-content:not(.expanded) {
  max-height: 400rpx;
  overflow: hidden;
  position: relative;
}

.bubble-content:not(.expanded)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.9) 100%);
  pointer-events: none;
}

.ai-message .bubble-content:not(.expanded)::after {
  background: linear-gradient(180deg, transparent 0%, #FFF9F5 100%);
}

.user-message .bubble-content:not(.expanded)::after {
  background: linear-gradient(180deg, transparent 0%, rgba(232, 93, 76, 0.8) 100%);
}

.expand-hint {
  display: block;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #FF8A7A;
  font-weight: 500;
  text-align: center;
}

.message-time {
  text-align: center;
  font-size: 22rpx;
  color: #CCC;
  margin-top: 8rpx;
}

/* ==================== 思考指示器 ==================== */
.thinking-indicator {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 0;
  margin-left: 24rpx;
}

.thinking-dots {
  display: flex;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 138, 122, 0.1);
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF8A7A;
  border-radius: 50%;
  animation: thinkingBounce 1.4s ease-in-out infinite;
}

.dot-1 { animation-delay: 0s; }
.dot-2 { animation-delay: 0.2s; }
.dot-3 { animation-delay: 0.4s; }

@keyframes thinkingBounce {
  0%, 80%, 100% { transform: scale(1); opacity: 0.5; }
  40% { transform: scale(1.4); opacity: 1; }
}

/* ==================== 底部输入区 ==================== */
.input-area {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  padding: 12rpx 20rpx 32rpx;
  background: transparent;
  position: relative;
  z-index: 10;
}

.attach-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04), 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  flex-shrink: 0;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.attach-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.95);
}

.attach-icon {
  font-size: 36rpx;
  color: #666;
}

.input-wrapper {
  flex: 1;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04), 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  min-height: 72rpx;
  max-height: 240rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
}

.input-wrapper:focus-within {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 12rpx 24rpx rgba(0, 0, 0, 0.12);
  border-color: rgba(255, 138, 122, 0.3);
}

.message-input {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  color: #1A1A1A;
}

.message-input::placeholder {
  color: #999;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(230, 230, 230, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0.6;
}

.send-btn:active {
  transform: scale(0.95);
}

.send-btn.active {
  background: linear-gradient(135deg, #FF8A7A 0%, #E85D4C 100%);
  box-shadow: 0 4rpx 12rpx rgba(232, 93, 76, 0.3), 0 8rpx 20rpx rgba(232, 93, 76, 0.2);
  opacity: 1;
}

.send-icon {
  font-size: 28rpx;
  color: #999;
  font-weight: 600;
  transition: color 0.2s ease;
}

.send-btn.active .send-icon {
  color: white;
}

/* ==================== 附件菜单 ==================== */
.attachment-menu {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(4rpx);
  -webkit-backdrop-filter: blur(4rpx);
}

.menu-content {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);
  border-radius: 16rpx;
  padding: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12), 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  display: flex;
  gap: 8rpx;
  animation: menuPop 0.25s cubic-bezier(0.2, 0, 0, 1);
}

@keyframes menuPop {
  from {
    opacity: 0;
    transform: translateX(-50%) scale(0.95) translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) scale(1) translateY(0);
  }
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  position: relative;
  transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 100rpx;
}

.menu-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.9);
}

.menu-icon {
  font-size: 36rpx;
  line-height: 1;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.menu-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #E85D4C;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(232, 93, 76, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.9);
}

/* ==================== 底部弹窗 ==================== */
.bottom-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2000;
}

.sheet-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(42, 42, 42, 0.5);
}

.sheet-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  animation: sheetSlideUp 0.3s ease-out;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
}

@keyframes sheetSlideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.sheet-handle {
  width: 80rpx;
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  margin: 16rpx auto;
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2A2A2A;
}

.sheet-actions {
  display: flex;
  gap: 16rpx;
}

.sheet-btn {
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  padding: 8rpx 16rpx;
}

.sheet-btn.primary {
  color: #E85D4C;
}

.sheet-list {
  flex: 1;
  padding: 16rpx 32rpx;
  overflow-y: scroll;
}

.sheet-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #FAF7F5;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.sheet-item:active {
  transform: scale(0.98);
}

.sheet-item.selected {
  background: linear-gradient(135deg, rgba(255, 138, 122, 0.15), rgba(232, 93, 76, 0.15));
  border: 2rpx solid rgba(255, 138, 122, 0.3);
}

.item-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2A2A2A;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.item-check.checked {
  background: linear-gradient(135deg, #FF8A7A, #E85D4C);
  border-color: #FF8A7A;
}

.check-icon {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}
