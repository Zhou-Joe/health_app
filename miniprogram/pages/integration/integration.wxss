.integration-container { padding: 20rpx; padding-bottom: 120rpx; }
.intro-card { margin-bottom: 20rpx; text-align: center; }
.intro-text { font-size: 26rpx; color: #666; line-height: 1.6; margin-top: 16rpx; }
.section-title { font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 20rpx; }
.checkup-item { display: flex; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid #F0F0F0; }
.checkup-item:last-child { border-bottom: none; }
.checkbox { margin-right: 20rpx; }
.checkbox-icon { width: 40rpx; height: 40rpx; border: 2rpx solid #D9D9D9; border-radius: 8rpx; display: flex; align-items: center; justify-content: center; font-size: 24rpx; color: #FFF; }
.checkbox-icon.checked { background-color: #4A90E2; border-color: #4A90E2; }
.checkup-info { flex: 1; }
.hospital { display: block; font-size: 30rpx; color: #333; margin-bottom: 8rpx; }
.date { font-size: 26rpx; color: #999; }

/* 自定义提示词卡片 */
.user-prompt-card { margin-bottom: 20rpx; }
.prompt-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.prompt-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.action-area { position: fixed; bottom: 0; left: 0; right: 0; padding: 20rpx; background-color: #FFF; border-top: 1rpx solid #F0F0F0; box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05); }
.selected-count { display: block; text-align: center; font-size: 26rpx; color: #666; margin-bottom: 16rpx; }
.integrate-btn { width: 100%; }
