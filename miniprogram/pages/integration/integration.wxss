.integration-container { padding: 20rpx; padding-bottom: 140rpx; }
.intro-card { margin-bottom: 20rpx; text-align: center; }
.intro-text { font-size: 26rpx; color: #666; line-height: 1.6; margin-top: 16rpx; }
.section-title { font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 20rpx; display: flex; justify-content: space-between; align-items: center; }

/* 检测重复按钮 */
.detect-btn {
  font-size: 24rpx;
  color: #4A90E2;
  padding: 8rpx 20rpx;
  background-color: rgba(74, 144, 226, 0.1);
  border-radius: 20rpx;
}

/* 重复报告检测卡片 */
.duplicate-detection { margin-bottom: 20rpx; }
.duplicate-list { margin-top: 20rpx; }
.duplicate-group {
  background-color: #FFF5F5;
  border-left: 4rpx solid #FF9A9E;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}
.duplicate-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.duplicate-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.duplicate-count {
  font-size: 24rpx;
  color: #FF9A9E;
  background-color: rgba(255, 154, 158, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.duplicate-checkups { margin-bottom: 16rpx; }
.duplicate-checkup-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx;
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}
.checkup-radio { margin-right: 16rpx; padding: 8rpx; }
.radio-icon {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #D9D9D9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}
.radio-icon.checked {
  border-color: #FF9A9E;
  color: #FF9A9E;
}
.checkup-details { flex: 1; }
.checkup-id {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}
.checkup-meta {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}
.checkup-notes {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-style: italic;
}
.duplicate-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}
.target-hint {
  font-size: 24rpx;
  color: #FF9A9E;
}
.merge-btn {
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  background-color: #FF9A9E;
  color: white;
  border: none;
  border-radius: 20rpx;
}
.merge-btn[disabled] {
  background-color: #CCC;
}

.no-duplicates {
  text-align: center;
  padding: 40rpx 0;
}
.no-duplicates-text {
  font-size: 28rpx;
  color: #4CAF50;
}

.detect-hint {
  text-align: center;
  padding: 40rpx 0;
}
.hint-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

.checkup-item { display: flex; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid #F0F0F0; }
.checkup-item:last-child { border-bottom: none; }
.checkbox { margin-right: 20rpx; }
.checkbox-icon { width: 40rpx; height: 40rpx; border: 2rpx solid #D9D9D9; border-radius: 8rpx; display: flex; align-items: center; justify-content: center; font-size: 24rpx; color: #FFF; }
.checkbox-icon.checked { background-color: #4A90E2; border-color: #4A90E2; }
.checkup-info { flex: 1; }
.hospital { display: block; font-size: 30rpx; color: #333; margin-bottom: 8rpx; }
.date { font-size: 26rpx; color: #999; }

/* 自定义提示词卡片 */
.user-prompt-card { margin-bottom: 20rpx; }
.prompt-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.prompt-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.action-area { position: fixed; bottom: 0; left: 0; right: 0; padding: 20rpx; background-color: #FFF; border-top: 1rpx solid #F0F0F0; box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05); }
.selected-count { display: block; text-align: center; font-size: 26rpx; color: #666; margin-bottom: 16rpx; }
.integrate-btn { width: 100%; }
