<view class="change-password-container app-theme">
  <view class="info-card">
    <view class="info-icon">ℹ️</view>
    <text class="info-text">修改密码后需要重新登录，请妥善保管您的新密码。</text>
  </view>

  <view class="form-section">
    <view class="form-item">
      <view class="input-wrapper">
        <text class="input-icon">🔒</text>
        <input class="input-field"
               placeholder="请输入原密码"
               password
               placeholder-class="input-placeholder"
               value="{{oldPassword}}"
               bindinput="onOldPasswordInput" />
      </view>
    </view>

    <view class="form-item">
      <view class="input-wrapper">
        <text class="input-icon">🔐</text>
        <input class="input-field"
               placeholder="请输入新密码（至少6位）"
               password
               placeholder-class="input-placeholder"
               value="{{newPassword}}"
               bindinput="onNewPasswordInput" />
      </view>
    </view>

    <view class="form-item">
      <view class="input-wrapper">
        <text class="input-icon">🔐</text>
        <input class="input-field"
               placeholder="请再次输入新密码"
               password
               placeholder-class="input-placeholder"
               value="{{confirmPassword}}"
               bindinput="onConfirmPasswordInput" />
      </view>
    </view>
  </view>

  <button class="submit-btn"
          bindtap="handleChangePassword"
          loading="{{loading}}"
          disabled="{{loading}}">
    <view wx:if="{{!loading}}" class="btn-content">
      <text class="btn-icon">✓</text>
      <text>确认修改</text>
    </view>
    <text wx:else>修改中...</text>
  </button>
</view>
